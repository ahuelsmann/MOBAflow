        color: white;
    }
    .header h1 {
        margin: 0;
        font-size: 1.5rem;
    }
    .header-right {
        display: flex;
        gap: 1rem;
    }
    .nav-menu {
        display: flex;
        gap: 1rem;
        padding: 0.5rem 2rem;
        background: #f5f5f5;
        border-bottom: 1px solid #e0e0e0;
    }
    .nav-link {
        color: #333;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
    }
    .nav-link:hover, .nav-link.active {
        background: #e0e0e0;
    }
    .header .nav-link {
        color: white;
    }
    .main-content {
        flex: 1;
        padding: 2rem;
    }
</style>

