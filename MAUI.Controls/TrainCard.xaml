<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Moba.MAUI.Controls.TrainCard">
    
    <Border StrokeThickness="1"
            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
            Padding="16"
            StrokeShape="RoundRectangle 8">
        
        <VerticalStackLayout Spacing="12">
            
            <!-- Train Name -->
            <Label Text="{Binding TrainName, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                   FontSize="18"
                   FontAttributes="Bold" />
            
            <!-- Speed Display -->
            <HorizontalStackLayout Spacing="8">
                <Image Source="speed_icon.png" 
                       WidthRequest="16" 
                       HeightRequest="16" />
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Speed: " />
                            <Span Text="{Binding Speed, Source={RelativeSource AncestorType={x:Type ContentView}}}" 
                                  FontAttributes="Bold" />
                            <Span Text=" km/h" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            
            <!-- Direction Display -->
            <HorizontalStackLayout Spacing="8">
                <Image WidthRequest="16" HeightRequest="16">
                    <Image.Source>
                        <FontImageSource 
                            Glyph="{Binding IsForward, Source={RelativeSource AncestorType={x:Type ContentView}}, Converter={StaticResource BoolToDirectionGlyphConverter}}"
                            FontFamily="SegoeFluent"
                            Color="{StaticResource Success}" />
                    </Image.Source>
                </Image>
                <Label Text="{Binding IsForward, Source={RelativeSource AncestorType={x:Type ContentView}}, Converter={StaticResource BoolToDirectionTextConverter}}" />
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </Border>
</ContentView>
