<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <!-- ========================================================================
         NuGet Configuration for MOBAflow Project
         .NET 9/10, WinUI, Blazor, MAUI, React
         ======================================================================== -->

    <!-- Package Sources -->
    <packageSources>
        <!-- Official NuGet Feed (Primary) -->
        <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    </packageSources>

    <packageSourceMapping>
        <packageSource key="nuget.org">
            <package pattern="*" />
        </packageSource>
    </packageSourceMapping>

    <!-- NuGet Client Configuration -->
    <config>
        <!-- Global Packages Folder (relative to solution root) -->
        <add key="globalPackagesFolder" value=".nuget/packages" />

        <!-- Cache Settings for improved restore performance -->
        <add key="http_cache" value="true" />

        <!-- Package Restoration Settings -->
        <add key="restore.useLockFile" value="false" />

        <!-- HTTP Request Timeout (in seconds) -->
        <add key="httpRequestTimeout" value="60" />

        <!-- Signature Validation Mode -->
        <!-- Options: "accept" (development), "require" (production/CI) -->
        <add key="signatureValidationMode" value="accept" />

        <!-- Suppress warnings for package source mapping -->
        <add key="nuget.warnOnMissingSourceMapping" value="false" />
    </config>
</configuration>