{
    "$schema": "https://aka.ms/vs/mcp/schema",
    "servers": {
        "azure-devops": {
            "command": "npx",
            "args": [ "-y", "@azure-devops/mcp@latest", "ahuelsmann", "-d", "all", "-a", "interactive" ],
            "type": "stdio",
            "env": { "AZURE_DEVOPS_ORG_URL": "https://dev.azure.com/ahuelsmann" }
        },
        "filesystem": {
            "command": "npx",
            "args": [ "-y", "@modelcontextprotocol/server-filesystem@latest", "." ],
            "type": "stdio",
            "env": {
                "MCP_FILESYSTEM_ROOT": ".",
                "MCP_FILESYSTEM_ENABLE_DELETE": "false"
            }
        }
    }
}