# XML and project files
[*.{xml,xaml,csproj,props,targets}]
indent_size = 2

# JSON files
[*.{json,resjson}]
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

#### Async/Await Configuration ####

# CA2007: Consider calling ConfigureAwait on the awaited task
# Library code (Backend, Common, Sound) should use ConfigureAwait(false)
# UI code (SharedUI, MAUI, WinUI, WebApp) can skip ConfigureAwait or use ConfigureAwait(true)
dotnet_diagnostic.CA2007.severity = none

