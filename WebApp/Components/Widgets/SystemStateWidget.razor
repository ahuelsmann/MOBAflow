@using Moba.SharedUI.ViewModel

<div class="system-widget">
    <div class="widget-header">
        <h3>System Status</h3>
    </div>

    <div class="widget-body">
        <div class="system-metrics">
            <div class="metric-row">
                <div class="metric">
                    <div class="metric-content">
                        <span class="metric-value @GetCurrentClass(ViewModel.MainCurrent)">@ViewModel.MainCurrent</span>
                        <span class="metric-unit">mA</span>
                    </div>
                    <span class="metric-label">Main</span>
                </div>

                <div class="metric">
                    <div class="metric-content">
                        <span class="metric-value @GetTemperatureClass(ViewModel.Temperature)">@ViewModel.Temperature</span>
                        <span class="metric-unit">Â°C</span>
                    </div>
                    <span class="metric-label">Temp</span>
                </div>
            </div>

            <div class="metric-row">
                <div class="metric">
                    <div class="metric-content">
                        <span class="metric-value">@((ViewModel.SupplyVoltage / 1000.0).ToString("F1"))</span>
                        <span class="metric-unit">V</span>
                    </div>
                    <span class="metric-label">Supply</span>
                </div>

                <div class="metric">
                    <div class="metric-content">
                        <span class="metric-value">@((ViewModel.VccVoltage / 1000.0).ToString("F1"))</span>
                        <span class="metric-unit">V</span>
                    </div>
                    <span class="metric-label">VCC</span>
                </div>
            </div>
        </div>

        <div class="version-info">
            <h4>Versionen</h4>
            <div class="version-row">
                <div class="version-item">
                    <span class="version-label">Seriennummer:</span>
                    <span class="version-value">@ViewModel.SerialNumber</span>
                </div>
                <div class="version-item">
                    <span class="version-label">Firmware Version:</span>
                    <span class="version-value">@ViewModel.FirmwareVersion</span>
                </div>
            </div>
            <div class="version-row">
                <div class="version-item">
                    <span class="version-label">Hardware Typ:</span>
                    <span class="version-value">@ViewModel.HardwareType</span>
                </div>
                <div class="version-item">
                    <span class="version-label">Hardware Version:</span>
                    <span class="version-value">@ViewModel.HardwareVersion</span>
                </div>
            </div>
        </div>

        <div class="system-state-footer">
            <div class="state-info">
                <span class="state-label">State:</span>
                <span class="state-value mono">@ViewModel.CentralState</span>
            </div>
            <div class="state-info">
                <span class="state-label">StateEx:</span>
                <span class="state-value mono">@ViewModel.CentralStateEx</span>
            </div>
        </div>
    </div>
</div>

<style>
    .version-info {
        margin-top: 16px;
        padding-top: 16px;
        border-top: 1px solid var(--border-color, #e0e0e0);
    }

    .version-info h4 {
        margin: 0 0 12px 0;
        font-size: 0.9rem;
        color: var(--text-secondary, #666);
    }

    .version-row {
        display: flex;
        gap: 24px;
        margin-bottom: 8px;
    }

    .version-item {
        flex: 1;
        min-width: 120px;
    }

    .version-label {
        display: block;
        font-size: 0.75rem;
        color: var(--text-secondary, #888);
        margin-bottom: 2px;
    }

    .version-value {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--text-primary, #333);
    }
</style>

@code {
[Parameter]
public CounterViewModel ViewModel { get; set; } = null!;

private string GetCurrentClass(int current)
    {
        if (current >= 3000) return "metric-critical";
        if (current >= 2000) return "metric-warning";
        return "metric-normal";
    }

    private string GetTemperatureClass(int temp)
    {
        if (temp >= 70) return "metric-critical";
        if (temp >= 60) return "metric-warning";
        return "metric-normal";
    }
}