@using Moba.SharedUI.ViewModel
@inject CounterViewModel ViewModel
@implements IDisposable
@inherits LayoutComponentBase

<div class="azure-devops-layout">
    <header class="top-header">
        <div class="header-left">
            <h1 class="app-title">MOBAdash</h1>
            <span class="subtitle">Model Railroad Dashboard</span>
        </div>
    </header>

    <nav class="navigation-bar">
        <NavMenu />
    </nav>

    <main class="main-content">
        <article class="content-area">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>

@code {
    protected override void OnInitialized()
    {
        // Subscribe to ViewModel property changes for real-time status updates
        ViewModel.PropertyChanged += OnViewModelPropertyChanged;
    }

    private void OnViewModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        // Update UI when IsConnected changes
        if (e.PropertyName == nameof(ViewModel.IsConnected))
        {
            InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        ViewModel.PropertyChanged -= OnViewModelPropertyChanged;
    }
}
