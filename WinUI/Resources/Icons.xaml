    <!--  Bremse: nur Kreis (mit/ohne Ausrufezeichen) plus kleine Bögen links und rechts mit Abstand zum Kreis.  -->
    <DataTemplate x:Key="BrakeActiveIcon">
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform">
            <Canvas Width="100" Height="100">
                <Ellipse Width="60" Height="60" Canvas.Left="20" Canvas.Top="20" Fill="Transparent" Stroke="#FFD700" StrokeThickness="4" />
                <Path Fill="Transparent" Stroke="#FFD700" StrokeThickness="3"
                      Data="M 14,28 Q 4,50 14,72 M 86,28 Q 96,50 86,72" />
                <Path Fill="Transparent" Stroke="#FFD700" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      Data="M 50,38 L 50,52 M 50,58 m 0,1.5 a 1.5,1.5 0 1,1 0,-3 a 1.5,1.5 0 1,1 0,3" />
            </Canvas>
        </Viewbox>
    </DataTemplate>
    <DataTemplate x:Key="BrakeReleasedIcon">
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform">
            <Canvas Width="100" Height="100">
                <Ellipse Width="60" Height="60" Canvas.Left="20" Canvas.Top="20" Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="4" />
                <Path Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="3"
                      Data="M 14,28 Q 4,50 14,72 M 86,28 Q 96,50 86,72" />
            </Canvas>
        </Viewbox>
    </DataTemplate>

</ResourceDictionary>
