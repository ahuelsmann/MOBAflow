<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Icons (DataTemplates für Buttons etc.); weitere SVG-Icons hier ergänzen  -->
    <!--  Strichfarbe: ThemeResource IconStrokeBrush (Light = schwarz, Dark = weiß) in App.xaml  -->
    <!--  Tür-Icons: Quelle WinUI/Assets/DoorOpen.svg, DoorClose.svg (viewBox 0 0 21000 29700, stroke-width 1000)  -->
    <!--  Zentrierung: einheitlich auf den gemeinsamen Türrahmen (Pfade 1–4) bezogen, damit beide Icons gleich wirken.  -->

    <!--  ScaleTransform skaliert das Icon (0,65 = kleiner, mit Abstand zum inneren Rahmen).  -->

    <DataTemplate x:Key="DoorOpenIcon">
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform">
            <Canvas Width="21000" Height="29700">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform X="40274" Y="2683" />
                        <TranslateTransform X="-10500" Y="-14850" />
                        <ScaleTransform ScaleX="0.65" ScaleY="0.65" />
                        <TranslateTransform X="10500" Y="14850" />
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Path Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="1000"
                      Data="M -44515,-450 l 13876,0 c 276,0 500,200 500,447 l 0,29106 c 0,247 -224,447 -500,447 l -13876,0 c -276,0 -500,-200 -500,-447 l 0,-29106 c 0,-247 224,-447 500,-447 z" />
                <Path Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="1000"
                      Data="M -28909,-450 l 13876,0 c 276,0 500,200 500,447 l 0,29106 c 0,247 -224,447 -500,447 l -13876,0 c -276,0 -500,-200 -500,-447 l 0,-29106 c 0,-247 224,-447 500,-447 z" />
                <Path Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="1000"
                      Data="M -26673,2050 l 9328,0 c 186,0 336,100 336,224 l 0,14552 c 0,124 -150,224 -336,224 l -9328,0 c -186,0 -336,-100 -336,-224 l 0,-14552 c 0,-124 150,-224 336,-224 z" />
                <Path Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="1000"
                      Data="M -42301,2050 l 9328,0 c 186,0 336,100 336,224 l 0,14552 c 0,124 -150,224 -336,224 l -9328,0 c -186,0 -336,-100 -336,-224 l 0,-14552 c 0,-124 150,-224 336,-224 z" />
                <Path Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="1000"
                      Data="M -11811,13495 l 0,0 0,0 4621,-3945 -4621,-3945 0,0 0,0 0,7890 z m 0,0 m 0,0 m 2310,-1972 m 0,-3946 m -2310,-1972 m 0,0 m 0,3945" />
                <Path Fill="Transparent" Stroke="{ThemeResource IconStrokeBrush}" StrokeThickness="1000"
                      Data="M -47690,5605 l 0,0 0,0 -4621,3945 4621,3945 0,0 0,0 0,-7890 z m 0,0 m 0,0 m -2310,1972 m 0,3946 m 2310,1972 m 0,0 m 0,-3945" />
            </Canvas>
        </Viewbox>
    </DataTemplate>

