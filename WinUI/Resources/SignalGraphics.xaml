<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Ks Signal Graphics - Modern German Railway Signal System  -->

    <!--  Ks Main Signal (Hauptsignal) - Hp0 (Stop)  -->
    <DataTemplate x:Key="KsMainSignalHp0Template">
        <Canvas Width="60" Height="60">
            <!--  Signal mast  -->
            <Rectangle
                Canvas.Left="28"
                Canvas.Top="5"
                Width="4"
                Height="50"
                Fill="#2C2C2C"
                RadiusX="2"
                RadiusY="2" />

            <!--  Signal housing  -->
            <Rectangle
                Canvas.Left="20"
                Canvas.Top="10"
                Width="20"
                Height="35"
                Fill="#1E1E1E"
                RadiusX="3"
                RadiusY="3"
                Stroke="#000000"
                StrokeThickness="1" />

            <!--  Red LED (Hp0 - Stop)  -->
            <Ellipse
                Canvas.Left="25"
                Canvas.Top="15"
                Width="10"
                Height="10"
                Fill="#FF0000" />

            <!--  Green LED (off)  -->
            <Ellipse
                Canvas.Left="25"
                Canvas.Top="28"
                Width="10"
                Height="10"
                Fill="#505050"
                Opacity="0.3" />
        </Canvas>
    </DataTemplate>

