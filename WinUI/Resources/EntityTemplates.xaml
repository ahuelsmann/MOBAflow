&lt;ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    xmlns:domain="using:Moba.Domain"
    xmlns:selector="using:Moba.WinUI.Selector"&gt;

    &lt;!-- EntityTemplateSelector --&gt;
    &lt;selector:EntityTemplateSelector x:Key="EntityTemplateSelector"
                                     JourneyTemplate="{StaticResource JourneyTemplate}"
                                     StationTemplate="{StaticResource StationTemplate}"
                                     WorkflowTemplate="{StaticResource WorkflowTemplate}"
                                     TrainTemplate="{StaticResource TrainTemplate}"
                                     ProjectTemplate="{StaticResource ProjectTemplate}"
                                     DefaultTemplate="{StaticResource DefaultTemplate}" /&gt;

    &lt;!-- ============================================ --&gt;
    &lt;!-- Journey Template (Fluent Design 2) --&gt;
    &lt;!-- ============================================ --&gt;
    &lt;DataTemplate x:Key="JourneyTemplate" x:DataType="vm:JourneyViewModel"&gt;
        &lt;ScrollViewer&gt;
            &lt;StackPanel Padding="16" Spacing="16"&gt;
                &lt;!-- Header --&gt;
                &lt;TextBlock Text="Journey Properties" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,8"/&gt;

                &lt;!-- Name --&gt;
                &lt;TextBox Header="Name" 
                         Text="{x:Bind Name, Mode=TwoWay}"
                         PlaceholderText="Enter journey name" /&gt;

                &lt;!-- Description --&gt;
                &lt;TextBox Header="Description" 
                         Text="{x:Bind Description, Mode=TwoWay}"
                         PlaceholderText="Enter description"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="80" /&gt;

                &lt;!-- InPort --&gt;
                &lt;NumberBox Header="InPort (Feedback Sensor)" 
                           Value="{x:Bind InPort, Mode=TwoWay}"
                           Minimum="0"
                           Maximum="255"
                           SpinButtonPlacementMode="Inline" /&gt;

                &lt;!-- FirstPos --&gt;
                &lt;NumberBox Header="First Position" 
                           Value="{x:Bind FirstPos, Mode=TwoWay}"
                           Minimum="0"
                           SpinButtonPlacementMode="Inline" /&gt;

                &lt;!-- Behavior On Last Stop --&gt;
                &lt;ComboBox Header="Behavior On Last Stop"
                          ItemsSource="{x:Bind BehaviorOnLastStopValues}"
                          SelectedItem="{x:Bind BehaviorOnLastStop, Mode=TwoWay}"
                          HorizontalAlignment="Stretch" /&gt;

                &lt;!-- Timer Settings --&gt;
                &lt;StackPanel Spacing="12"&gt;
                    &lt;CheckBox Content="Use Timer To Ignore Feedbacks"
                              IsChecked="{x:Bind IsUsingTimerToIgnoreFeedbacks, Mode=TwoWay}" /&gt;

                    &lt;NumberBox Header="Timer Interval (seconds)"
                               Value="{x:Bind IntervalForTimerToIgnoreFeedbacks, Mode=TwoWay}"
                               Minimum="0"
                               Maximum="60"
                               IsEnabled="{x:Bind IsUsingTimerToIgnoreFeedbacks, Mode=OneWay}"
                               SpinButtonPlacementMode="Inline" /&gt;
                &lt;/StackPanel&gt;

                &lt;!-- Text-to-Speech Template --&gt;
                &lt;TextBox Header="Text-to-Speech Template" 
                         Text="{x:Bind Text, Mode=TwoWay}"
                         PlaceholderText="e.g., '{TrainName} is arriving at {StationName}'"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="60" /&gt;
            &lt;/StackPanel&gt;
        &lt;/ScrollViewer&gt;
    &lt;/DataTemplate&gt;

    &lt;!-- ============================================ --&gt;
    &lt;!-- Station Template (Fluent Design 2) --&gt;
    &lt;!-- ============================================ --&gt;
    &lt;DataTemplate x:Key="StationTemplate" x:DataType="vm:StationViewModel"&gt;
        &lt;ScrollViewer&gt;
            &lt;StackPanel Padding="16" Spacing="16"&gt;
                &lt;TextBlock Text="Station Properties" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,8"/&gt;

                &lt;TextBox Header="Name" 
                         Text="{x:Bind Name, Mode=TwoWay}"
                         PlaceholderText="Station name" /&gt;

                &lt;TextBox Header="Description" 
                         Text="{x:Bind Description, Mode=TwoWay}"
                         PlaceholderText="Optional description"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="60" /&gt;

                &lt;NumberBox Header="InPort (Platform Sensor)" 
                           Value="{x:Bind InPort, Mode=TwoWay}"
                           Minimum="0"
                           Maximum="255"
                           SpinButtonPlacementMode="Inline" /&gt;

                &lt;NumberBox Header="Number Of Laps To Stop" 
                           Value="{x:Bind NumberOfLapsToStop, Mode=TwoWay}"
                           Minimum="1"
                           SpinButtonPlacementMode="Inline" /&gt;

                &lt;CheckBox Content="Exit On Left Side"
                          IsChecked="{x:Bind IsExitOnLeft, Mode=TwoWay}" /&gt;

                &lt;!-- Schedule --&gt;
                &lt;TextBlock Text="Schedule" 
                           Style="{ThemeResource BaseTextBlockStyle}"
                           Margin="0,8,0,4"/&gt;

                &lt;TimePicker Header="Arrival Time" 
                            Time="{x:Bind Arrival, Mode=TwoWay}" /&gt;

                &lt;TimePicker Header="Departure Time" 
                            Time="{x:Bind Departure, Mode=TwoWay}" /&gt;

                &lt;NumberBox Header="Track Number" 
                           Value="{x:Bind Track, Mode=TwoWay}"
                           Minimum="1"
                           Maximum="99"
                           SpinButtonPlacementMode="Inline" /&gt;
            &lt;/StackPanel&gt;
        &lt;/ScrollViewer&gt;
    &lt;/DataTemplate&gt;

    &lt;!-- ============================================ --&gt;
    &lt;!-- Default Template (Fallback) --&gt;
    &lt;!-- ============================================ --&gt;
    &lt;DataTemplate x:Key="DefaultTemplate"&gt;
        &lt;StackPanel Padding="16" VerticalAlignment="Center" HorizontalAlignment="Center"&gt;
            &lt;TextBlock Text="No editor available" 
                       Style="{ThemeResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       TextAlignment="Center"/&gt;
            &lt;TextBlock Text="Select an entity to edit its properties" 
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                       TextAlignment="Center"
                       Margin="0,4,0,0"/&gt;
        &lt;/StackPanel&gt;
    &lt;/DataTemplate&gt;

    &lt;!-- Placeholder templates for remaining types --&gt;
    &lt;DataTemplate x:Key="WorkflowTemplate" x:DataType="vm:WorkflowViewModel"&gt;
        &lt;ScrollViewer&gt;
            &lt;StackPanel Padding="16" Spacing="16"&gt;
                &lt;TextBlock Text="Workflow Properties" Style="{ThemeResource SubtitleTextBlockStyle}"/&gt;
                &lt;TextBox Header="Name" Text="{x:Bind Name, Mode=TwoWay}"/&gt;
                &lt;TextBlock Text="(More properties coming...)" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/&gt;
            &lt;/StackPanel&gt;
        &lt;/ScrollViewer&gt;
    &lt;/DataTemplate&gt;

    &lt;DataTemplate x:Key="TrainTemplate" x:DataType="vm:TrainViewModel"&gt;
        &lt;ScrollViewer&gt;
            &lt;StackPanel Padding="16" Spacing="16"&gt;
                &lt;TextBlock Text="Train Properties" Style="{ThemeResource SubtitleTextBlockStyle}"/&gt;
                &lt;TextBox Header="Name" Text="{x:Bind Name, Mode=TwoWay}"/&gt;
                &lt;TextBlock Text="(More properties coming...)" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/&gt;
            &lt;/StackPanel&gt;
        &lt;/ScrollViewer&gt;
    &lt;/DataTemplate&gt;

    &lt;DataTemplate x:Key="ProjectTemplate" x:DataType="vm:ProjectViewModel"&gt;
        &lt;ScrollViewer&gt;
            &lt;StackPanel Padding="16" Spacing="16"&gt;
                &lt;TextBlock Text="Project Properties" Style="{ThemeResource SubtitleTextBlockStyle}"/&gt;
                &lt;TextBox Header="Name" Text="{x:Bind Name, Mode=TwoWay}"/&gt;
            &lt;/StackPanel&gt;
        &lt;/ScrollViewer&gt;
    &lt;/DataTemplate&gt;

&lt;/ResourceDictionary&gt;
