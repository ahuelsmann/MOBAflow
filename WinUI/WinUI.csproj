<Project Sdk="Microsoft.NET.Sdk">
<PropertyGroup>
  <RootNamespace>Moba.WinUI</RootNamespace>
  <AssemblyName>MOBAflow</AssemblyName>
  <ApplicationTitle>MOBAflow</ApplicationTitle>
  <ApplicationIcon>Assets\mobaflow-icon.ico</ApplicationIcon>
  <OutputType>WinExe</OutputType>
  <TargetFramework>net10.0-windows10.0.17763.0</TargetFramework>
  <UseWinUI>true</UseWinUI>
  <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
</PropertyGroup>

<!-- Debug Performance Optimizations -->
<PropertyGroup Condition="'$(Configuration)' == 'Debug'">
  <!-- Fast Up-to-Date Check: Allow VS to skip builds when nothing changed -->
  <DisableFastUpToDateCheck>false</DisableFastUpToDateCheck>
  <!-- Disable analyzers during Debug builds -->
  <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
  <!-- Disable XML doc generation -->
  <GenerateDocumentationFile>false</GenerateDocumentationFile>
</PropertyGroup>

<!-- Release: Enable all checks -->
<PropertyGroup Condition="'$(Configuration)' == 'Release'">
  <DisableFastUpToDateCheck>false</DisableFastUpToDateCheck>
</PropertyGroup>

<PropertyGroup>
    <GenerateAppxManifest>false</GenerateAppxManifest>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>
  <PropertyGroup>
    <WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>
  </PropertyGroup>
  <!-- Mark generated manifest as a build output so Fast Up-to-Date check does not warn -->
  <ItemGroup>
    <UpToDateCheckBuilt Include="$(IntermediateOutputPath)Manifests\app.manifest" />
  </ItemGroup>
  <!-- App Icons for WinUI Package -->
  <ItemGroup>
    <Content Include="Assets\*.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <!-- Content files -->
  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="appsettings.Development.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="example-solution.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="germany-stations.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="myMOBA2025b.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <!-- ASP.NET Core fÃ¼r in-process Kestrel hosting (REST API + SignalR) -->
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" />
    <PackageReference Include="Microsoft.WindowsAppSDK" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.WinUI.Managed" />
    <PackageReference Include="Serilog.Extensions.Logging" />
    <PackageReference Include="Serilog.Sinks.Debug" />
    <PackageReference Include="Serilog.Sinks.File" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\SharedUI\SharedUI.csproj" />
    <ProjectReference Include="..\Common\Common.csproj" />
    <ProjectReference Include="..\TrackPlan\TrackPlan.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- App Icon - DEAKTIVIERT wegen Android Resource ID Konflikt (siehe Issue mit id/legacy Fragment) -->
    <!-- TODO: PNG-basierte Icons manuell in Platforms/Android/Resources/mipmap-* platzieren -->
    <!-- <MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" /> -->

    <!-- Splash Screen mit neuem MOBAflow Design (gleich wie WinUI) - DEAKTIVIERT: SVG-Datei fehlt -->
    <!-- <MauiSplashScreen Include="Resources\Splash\mobaflow_icon_splash.svg" Color="#512BD4" BaseSize="128,128" /> -->

    <!-- Images (includes all SVG icons automatically) -->
    <MauiImage Include="Resources\Images\*" />

    <!-- Custom Fonts -->
    <MauiFont Include="Resources\Fonts\*" />

    <!-- Raw Assets -->
    <MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />

    <!-- Audio Library - Sound effects for workflow actions -->
    <!-- Now managed by Sound project (Sound.csproj copies to output) -->
  </ItemGroup>
</Project>