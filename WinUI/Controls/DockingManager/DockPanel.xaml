<UserControl
    x:Class="Moba.WinUI.Controls.DockPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">

    <Grid
        x:Name="RootGrid"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <!--  Collapsed tab  -->
        <Border
            x:Name="CollapsedTab"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            PointerPressed="OnCollapsedTabPressed"
            ToolTipService.ToolTip="{Binding PanelTitle, ElementName=Root}"
            Visibility="Collapsed">
            <StackPanel
                x:Name="CollapsedStack"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="8">
                <FontIcon
                    x:Name="CollapsedIcon"
                    FontSize="14"
                    Foreground="{ThemeResource SystemAccentColor}"
                    Glyph="{Binding PanelIconGlyph, ElementName=Root}" />
            </StackPanel>
        </Border>

        <!--  Expanded panel  -->
        <Grid
            x:Name="ExpandedPanel"
            Padding="12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header with Icon, Title, and Actions  -->
            <Grid
                Grid.Row="0"
                Margin="0,0,0,8"
                CanDrag="True"
                DragStarting="OnDragStarting">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Icon  -->
                <FontIcon
                    x:Name="PanelIcon"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Glyph="&#xE71E;" />

                <!--  Title  -->
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Text="{Binding PanelTitle, ElementName=Root}" />

                <!--  Pin Button  -->
                <Button
                    x:Name="PinButton"
                    Grid.Column="2"
                    Padding="4"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="OnPinButtonClick"
                    ToolTipService.ToolTip="Collapse panel">
                    <FontIcon
                        x:Name="PinIcon"
                        FontSize="12"
                        Foreground="{ThemeResource SystemAccentColor}"
                        Glyph="&#xE718;" />
                </Button>
            </Grid>

            <!--  Content  -->
            <ContentPresenter
                x:Name="ContentPresenter"
                Grid.Row="1"
                Content="{Binding PanelContent, ElementName=Root}" />
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ExpansionStates">
                <VisualState x:Name="Expanded">
                    <VisualState.Setters>
                        <Setter Target="ExpandedPanel.Visibility" Value="Visible" />
                        <Setter Target="CollapsedTab.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Collapsed">
                    <VisualState.Setters>
                        <Setter Target="ExpandedPanel.Visibility" Value="Collapsed" />
                        <Setter Target="CollapsedTab.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
