<UserControl
    x:Class="Moba.WinUI.Controls.DockingManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  Left Dock Panel  -->
        <Grid
            x:Name="LeftDockArea"
            Grid.Row="0"
            Grid.Column="0"
            Background="{ThemeResource SurfaceSecondaryBrush}">
            <ContentPresenter x:Name="LeftPanelPresenter" />
        </Grid>

        <!--  Splitter between Left and Center  -->
        <Grid
            x:Name="LeftSplitter"
            Grid.Row="0"
            Grid.Column="0"
            Width="4"
            Background="Transparent">
            <Grid Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.1" />
        </Grid>

        <!--  Center Area with Top/Document/Bottom  -->
        <Grid
            x:Name="CenterArea"
            Grid.Row="0"
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Top Dock Panel  -->
            <Grid
                x:Name="TopDockArea"
                Grid.Row="0"
                Background="{ThemeResource SurfaceSecondaryBrush}">
                <ContentPresenter x:Name="TopPanelPresenter" />
            </Grid>

            <!--  Splitter between Top and Center  -->
            <Grid
                x:Name="TopSplitter"
                Grid.Row="0"
                Height="4"
                Background="Transparent">
                <Grid Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.1" />
            </Grid>

            <!--  Document Area  -->
            <Grid
                x:Name="DocumentArea"
                Grid.Row="1"
                Background="{ThemeResource SurfaceBackgroundFillColorDefaultBrush}">
                <ContentPresenter x:Name="DocumentPresenter" />
            </Grid>

            <!--  Splitter between Center and Bottom  -->
            <Grid
                x:Name="BottomSplitter"
                Grid.Row="1"
                Height="4"
                VerticalAlignment="Bottom"
                Background="Transparent">
                <Grid Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.1" />
            </Grid>

            <!--  Bottom Dock Panel  -->
            <Grid
                x:Name="BottomDockArea"
                Grid.Row="2"
                Background="{ThemeResource SurfaceSecondaryBrush}">
                <ContentPresenter x:Name="BottomPanelPresenter" />
            </Grid>
        </Grid>

        <!--  Splitter between Center and Right  -->
        <Grid
            x:Name="RightSplitter"
            Grid.Row="0"
            Grid.Column="2"
            Width="4"
            Background="Transparent">
            <Grid Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.1" />
        </Grid>

        <!--  Right Dock Panel  -->
        <Grid
            x:Name="RightDockArea"
            Grid.Row="0"
            Grid.Column="2"
            Background="{ThemeResource SurfaceSecondaryBrush}">
            <ContentPresenter x:Name="RightPanelPresenter" />
        </Grid>

        <!--  Status Bar  -->
        <Grid
            x:Name="StatusBarArea"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Background="{ThemeResource SurfaceSecondaryBrush}">
            <ContentPresenter x:Name="StatusBarPresenter" />
        </Grid>
    </Grid>
</UserControl>
