<UserControl
    x:Class="Moba.WinUI.Controls.CollapsibleColumn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="Root">

    <Grid x:Name="RootGrid">
        <!--  Collapsed: vertical tab strip  -->
        <Border
            x:Name="CollapsedTab"
            Width="32"
            HorizontalAlignment="Left"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            PointerPressed="OnCollapsedTabPressed"
            Visibility="Collapsed">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="8">
                <FontIcon
                    x:Name="CollapsedIcon"
                    FontSize="14"
                    Foreground="{ThemeResource SystemAccentColor}"
                    Glyph="&#xE8F1;" />

            </StackPanel>
        </Border>

        <!--  Expanded: full panel  -->
        <Grid
            x:Name="ExpandedPanel"
            Padding="12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header with collapse button  -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <FontIcon
                    x:Name="ExpandedIcon"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Glyph="&#xE8F1;" />
                <Button
                    Grid.Column="2"
                    Padding="4"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="OnCollapseButtonClick"
                    ToolTipService.ToolTip="Unpin panel">
                    <FontIcon
                        FontSize="12"
                        Foreground="{ThemeResource SystemAccentColor}"
                        Glyph="&#xE718;" />
                </Button>
            </Grid>

            <!--  Content  -->
            <ContentPresenter x:Name="ContentArea" Grid.Row="1" />
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ExpansionStates">
                <VisualState x:Name="Expanded">
                    <VisualState.Setters>
                        <Setter Target="ExpandedPanel.Visibility" Value="Visible" />
                        <Setter Target="CollapsedTab.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Collapsed">
                    <VisualState.Setters>
                        <Setter Target="ExpandedPanel.Visibility" Value="Collapsed" />
                        <Setter Target="CollapsedTab.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
