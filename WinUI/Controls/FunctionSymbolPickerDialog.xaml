<ContentDialog
    x:Class="Moba.WinUI.Controls.FunctionSymbolPickerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Symbol für Funktion wählen"
    PrimaryButtonText="Abbrechen"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    DefaultButton="Secondary">
    <ContentDialog.Resources>
        <Style x:Key="SymbolButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="44" />
            <Setter Property="Height" Value="44" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
    </ContentDialog.Resources>
    <Grid MaxWidth="400" MaxHeight="400">
        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="SymbolsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid
                            Orientation="Horizontal"
                            MaximumRowsOrColumns="8"
                            ItemWidth="48"
                            ItemHeight="48" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Button
                            Margin="2"
                            Style="{StaticResource SymbolButtonStyle}"
                            Tag="{x:Bind}"
                            Click="SymbolButton_Click"
                            ToolTipService.ToolTip="{x:Bind}">
                            <FontIcon FontSize="20" Glyph="{x:Bind}" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</ContentDialog>
