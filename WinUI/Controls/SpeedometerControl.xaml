<UserControl
    x:Class="Moba.WinUI.Controls.SpeedometerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas Width="260" Height="200">
                <Path
                    Data="M 30,130 A 100,100 0 0 1 230,130"
                    Stroke="{ThemeResource CardStrokeColorDefaultBrush}"
                    StrokeThickness="16" />
                <Path
                    x:Name="SpeedArc"
                    Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                    StrokeEndLineCap="Round"
                    StrokeStartLineCap="Round"
                    StrokeThickness="16" />
                <Line
                    Stroke="{ThemeResource TextFillColorPrimaryBrush}"
                    StrokeThickness="2"
                    X1="30"
                    X2="45"
                    Y1="130"
                    Y2="130" />
                <TextBlock
                    Canvas.Left="6"
                    Canvas.Top="123"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="0" />
                <Line
                    Stroke="{ThemeResource TextFillColorPrimaryBrush}"
                    StrokeThickness="2"
                    X1="49"
                    X2="61"
                    Y1="71"
                    Y2="80" />
                <TextBlock
                    Canvas.Left="32"
                    Canvas.Top="52"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="25" />
                <Line
                    Stroke="{ThemeResource TextFillColorPrimaryBrush}"
                    StrokeThickness="2"
                    X1="130"
                    X2="130"
                    Y1="30"
                    Y2="45" />
                <TextBlock
                    Canvas.Left="118"
                    Canvas.Top="8"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="50" />
                <Line
                    Stroke="{ThemeResource TextFillColorPrimaryBrush}"
                    StrokeThickness="2"
                    X1="211"
                    X2="199"
                    Y1="71"
                    Y2="80" />
                <TextBlock
                    Canvas.Left="215"
                    Canvas.Top="52"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="75" />
                <Line
                    Stroke="{ThemeResource TextFillColorPrimaryBrush}"
                    StrokeThickness="2"
                    X1="227"
                    X2="212"
                    Y1="105"
                    Y2="109" />
                <TextBlock
                    Canvas.Left="230"
                    Canvas.Top="98"
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="100" />
                <Line
                    Stroke="#E81123"
                    StrokeThickness="3"
                    X1="230"
                    X2="215"
                    Y1="130"
                    Y2="130" />
                <TextBlock
                    Canvas.Left="232"
                    Canvas.Top="123"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="#E81123"
                    Text="MAX" />
                <Path
                    x:Name="Needle"
                    Canvas.Left="130"
                    Canvas.Top="130"
                    Data="M -4,0 L 0,-90 L 4,0 Z"
                    Fill="{ThemeResource AccentFillColorDefaultBrush}"
                    RenderTransformOrigin="0,0">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="NeedleRotation" Angle="-90" />
                    </Path.RenderTransform>
                </Path>
                <Ellipse
                    Canvas.Left="115"
                    Canvas.Top="115"
                    Width="30"
                    Height="30"
                    Fill="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                    StrokeThickness="3" />
                <Border
                    Canvas.Left="80"
                    Canvas.Top="150"
                    Width="100"
                    Height="45"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="6" />
                <TextBlock
                    x:Name="SpeedText"
                    Canvas.Left="80"
                    Canvas.Top="152"
                    Width="100"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Text="0"
                    TextAlignment="Center" />
                <TextBlock
                    Canvas.Left="80"
                    Canvas.Top="178"
                    Width="100"
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="km/h"
                    TextAlignment="Center" />
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
