<UserControl
    x:Class="Moba.WinUI.Controls.PropertyGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Object Selector ComboBox (VS: Object dropdown at top)  -->
        <ComboBox
            Grid.Row="0"
            Margin="4"
            HorizontalAlignment="Stretch"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            ItemsSource="{Binding AvailableObjects, ElementName=Root}"
            SelectedItem="{Binding SelectedObjectName, ElementName=Root, Mode=TwoWay}" />

        <!--  Toolbar (VS: Sort Alphabetical / Categorized / Properties / Events)  -->
        <StackPanel
            Grid.Row="1"
            Margin="4,0"
            Orientation="Horizontal"
            Spacing="2">
            <ToggleButton
                Width="28"
                Height="28"
                Padding="0"
                Background="Transparent"
                BorderBrush="Transparent"
                CornerRadius="4"
                IsChecked="{Binding IsCategorized, ElementName=Root, Mode=TwoWay}"
                ToolTipService.ToolTip="Categorized">
                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="12"
                    Glyph="&#xE8FD;" />
            </ToggleButton>
            <ToggleButton
                Width="28"
                Height="28"
                Padding="0"
                Background="Transparent"
                BorderBrush="Transparent"
                CornerRadius="4"
                IsChecked="{Binding IsAlphabetical, ElementName=Root, Mode=TwoWay}"
                ToolTipService.ToolTip="Alphabetical">
                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="12"
                    Glyph="&#xE8CB;" />
            </ToggleButton>
            <Border
                Width="1"
                Margin="4,4"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
            <Button
                Width="28"
                Height="28"
                Padding="0"
                Background="Transparent"
                BorderBrush="Transparent"
                CornerRadius="4"
                ToolTipService.ToolTip="Properties">
                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="12"
                    Glyph="&#xE946;" />
            </Button>
        </StackPanel>

        <!--  Property Grid (Name/Value rows)  -->
        <ListView
            Grid.Row="2"
            Margin="0"
            Background="Transparent"
            ItemsSource="{Binding DisplayItems, ElementName=Root}"
            SelectedItem="{Binding SelectedProperty, ElementName=Root, Mode=TwoWay}"
            SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="MinHeight" Value="0" />
                    <Setter Property="Margin" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid MinHeight="26">
                        <!--  Category Header  -->
                        <Grid
                            Padding="6,4"
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            Visibility="{Binding IsCategoryHeader, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="{Binding Name}" />
                        </Grid>

                        <!--  Property Row  -->
                        <Grid
                            Padding="0"
                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,0.5"
                            Visibility="{Binding IsPropertyRow, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Property Name  -->
                            <TextBlock
                                Grid.Column="0"
                                Margin="16,4,4,4"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis" />

                            <!--  Splitter  -->
                            <Border
                                Grid.Column="1"
                                Width="1"
                                Margin="0,2"
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                Opacity="0.3" />

                            <!--  Property Value  -->
                            <TextBlock
                                Grid.Column="2"
                                Margin="8,4,4,4"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{Binding Value}"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--  Description Pane (VS: bottom area showing property description)  -->
        <Border
            Grid.Row="3"
            MinHeight="48"
            Padding="8,6"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <StackPanel>
                <TextBlock
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Text="{Binding SelectedProperty.Name, ElementName=Root, FallbackValue=''}" />
                <TextBlock
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="{Binding SelectedProperty.Description, ElementName=Root, FallbackValue=''}"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
