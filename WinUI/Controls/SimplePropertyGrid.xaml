<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Moba.WinUI.Controls">

    <Style TargetType="local:SimplePropertyGrid">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SimplePropertyGrid">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel
                            x:Name="PART_PropertiesPanel"
                            Padding="16"
                            Spacing="0" />
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
