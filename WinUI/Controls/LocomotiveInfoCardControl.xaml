<UserControl
    x:Class="Moba.WinUI.Controls.LocomotiveInfoCardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border
        Padding="16"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="8">
        <Grid RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="4">
                <TextBlock
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Text="CURRENT LOCOMOTIVE" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="12">
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <Border
                        Padding="10"
                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="32"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Glyph="&#xE7C2;" />
                    </Border>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="{x:Bind CurrentPresetName, Mode=OneWay}"
                        TextAlignment="Center"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>

                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock
                            FontSize="10"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Text="DCC" />
                        <TextBlock
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="{x:Bind LocoAddress, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock
                            FontSize="10"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Text="VMAX" />
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="{x:Bind SelectedVmax, Mode=OneWay}" />
                            <TextBlock
                                FontSize="10"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Text="km/h" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind Preset1Command, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Spacing="2">
                        <TextBlock FontSize="9" Text="PRESET 1" />
                        <TextBlock
                            FontSize="11"
                            FontWeight="SemiBold"
                            Text="{x:Bind Preset1Name, Mode=OneWay}" />
                    </StackPanel>
                </Button>
                <Button
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind Preset2Command, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Spacing="2">
                        <TextBlock FontSize="9" Text="PRESET 2" />
                        <TextBlock
                            FontSize="11"
                            FontWeight="SemiBold"
                            Text="{x:Bind Preset2Name, Mode=OneWay}" />
                    </StackPanel>
                </Button>
                <Button
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind Preset3Command, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Spacing="2">
                        <TextBlock FontSize="9" Text="PRESET 3" />
                        <TextBlock
                            FontSize="11"
                            FontWeight="SemiBold"
                            Text="{x:Bind Preset3Name, Mode=OneWay}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
