<UserControl
    x:Class="Moba.WinUI.Controls.KsSignalScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--
        Ks multi-aspect signal screen (fully equipped) per Wikipedia:
        https://de.wikipedia.org/wiki/Ks-Signalsystem
        
        Layout:
        Row 0: Zs3
        Row 1: W1
        Row 2: Hp 0 (red - stop)
        Row 3: Ks 1 (green left) / Ks 2 (yellow right)
        Row 4: W2
        Row 5: W3
        Row 6: Zs3v
    -->

    <Viewbox Stretch="Uniform">
        <Grid
            Padding="6"
            Background="#1E1E1E"
            ColumnSpacing="3"
            CornerRadius="4"
            RowSpacing="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Row 0: Zs3  -->
            <TextBox
                x:Name="Zs3"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4" />

            <!--  Row 1: W1  -->
            <Ellipse
                x:Name="W1"
                Grid.Row="1"
                Grid.Column="0"
                Width="12"
                Height="12"
                Fill="White" />

            <!--  Row 2: Hp 0 (red - stop)  -->
            <Ellipse
                x:Name="Hp0"
                Grid.Row="2"
                Grid.Column="2"
                Width="18"
                Height="18"
                Fill="#FF0000" />

            <!--  Row 3: Ks 1 (green left) / Ks 2 (yellow right)  -->
            <Ellipse
                x:Name="Ks1"
                Grid.Row="3"
                Grid.Column="1"
                Width="18"
                Height="18"
                Fill="#00C800" />
            <Ellipse
                x:Name="Ks2"
                Grid.Row="3"
                Grid.Column="3"
                Width="18"
                Height="18"
                Fill="#FFC800" />

            <!--  Row 4: W2 + Zs7 (3x gelb)  -->
            <Ellipse
                x:Name="W2"
                Grid.Row="4"
                Grid.Column="1"
                Width="12"
                Height="12"
                Fill="White" />
            <Ellipse
                x:Name="Zs7Center"
                Grid.Row="4"
                Grid.Column="2"
                Width="12"
                Height="12"
                Fill="White" />
            <Ellipse
                x:Name="Zs7Right"
                Grid.Row="4"
                Grid.Column="3"
                Width="12"
                Height="12"
                Fill="White" />

            <!--  Row 5: W3 + Ra12 right LED  -->
            <Ellipse
                x:Name="W3"
                Grid.Row="5"
                Grid.Column="0"
                Width="12"
                Height="12"
                Fill="White" />
            <Ellipse
                x:Name="Ra12Right"
                Grid.Row="5"
                Grid.Column="1"
                Width="12"
                Height="12"
                Fill="White" />

            <!--  Row 6: Zs3v  -->
            <TextBox
                x:Name="Zs3V"
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="4" />
        </Grid>
    </Viewbox>
</UserControl>