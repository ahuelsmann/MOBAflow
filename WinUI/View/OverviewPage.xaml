<Page
    x:Class="Moba.WinUI.View.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:Moba.WinUI.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:HexColorToBrushConverter x:Key="HexColorToBrushConverter" />
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="40,24,40,40" Spacing="16">

            <!--  Page Header  -->
            <TextBlock
                Margin="0,0,0,8"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Lap Counter Dashboard" />
            
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                <FontIcon
                    FontSize="14"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                    Glyph="&#xE8EB;" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" />
            </StackPanel>

            <!--  Z21 System State Section (only visible when connected)  -->
            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Header="Z21 System State"
                IsExpanded="False"
                Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12"><FontIcon FontSize="20" Glyph="&#xE945;" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}" Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <Grid
                    Padding="56,16,0,16"
                    ColumnSpacing="24"
                    RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Main Current:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.MainCurrent, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" mA" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="Temperature:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.Temperature, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" C" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Supply Voltage:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.SupplyVoltage, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" mV" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="VCC Voltage:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.VccVoltage, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" mV" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Central State:" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.CentralState, Mode=OneWay}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="State Ex:" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.CentralStateEx, Mode=OneWay}" />
                </Grid>
            </Expander>

            <!--  Settings Section (only visible when connected)  -->
            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Header="Settings"
                IsExpanded="False"
                Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12"><FontIcon FontSize="20" Glyph="&#xE713;" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}" Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <Grid
                    Padding="56,16,0,16"
                    ColumnSpacing="24"
                    RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Target Lap Count:" />
                    <NumberBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="150"
                        HorizontalAlignment="Left"
                        Minimum="1"
                        SpinButtonPlacementMode="Inline"
                        Value="{x:Bind ViewModel.GlobalTargetLapCount, Mode=TwoWay}" />

                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Content="Use Timer Filter"
                        IsChecked="{x:Bind ViewModel.UseTimerFilter, Mode=TwoWay}" />

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Spacing="4"
                        Visibility="{x:Bind ViewModel.UseTimerFilter, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{x:Bind ViewModel.TimerIntervalSeconds, Mode=OneWay}" />
                        <Slider
                            Maximum="10"
                            Minimum="1"
                            StepFrequency="0.5"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            Value="{x:Bind ViewModel.TimerIntervalSeconds, Mode=TwoWay}" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="Prevents multiple counts from the same train pass (e.g., 16-axle train)"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Expander>

            <!--  Track Statistics Section (only visible when connected)  --><StackPanel Spacing="16" Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="12"><FontIcon FontSize="20" Glyph="&#xE9D9;" />
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Track Statistics" />
                </StackPanel>

                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Statistics, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="vm:InPortStatistic">
                            <Border
                                Margin="0,0,0,12"
                                Padding="16"
                                Background="{x:Bind BackgroundColorName, Mode=OneWay, Converter={StaticResource HexColorToBrushConverter}}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Grid RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Text="{x:Bind InPort, Mode=OneWay}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Foreground="White"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind LapCountFormatted, Mode=OneWay}" />

                                    <ProgressBar
                                        Grid.Row="2"
                                        Maximum="1"
                                        ShowError="False"
                                        ShowPaused="False"
                                        Value="{x:Bind Progress, Mode=OneWay}" />

                                    <Grid Grid.Row="3" ColumnSpacing="16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="White"
                                                Glyph="&#xE916;" />
                                            <TextBlock Foreground="White" Text="Last lap:" />
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{Binding LastLapTimeFormatted, Mode=OneWay}" />
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="White"
                                                Glyph="&#xE890;" />
                                            <TextBlock Foreground="White" Text="Last seen:" />
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{Binding LastFeedbackTimeFormatted, Mode=OneWay}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <!--  Reset Button  -->
                <Button
                    MinWidth="200"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.ResetCountersCommand}"
                    Content="Reset All Counters" /></StackPanel></StackPanel></ScrollViewer>
</Page>