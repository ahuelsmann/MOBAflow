<Page
    x:Class="Moba.WinUI.View.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="40,24,40,40" Spacing="8">

            <!--  Page Header  -->
            <TextBlock
                Margin="0,0,0,8"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Overview" />

            <!--  Z21 System State Section (only visible when connected)  -->
            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Header="Z21 System State"
                IsExpanded="True">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontSize="20" Glyph="&#xE945;" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <Grid
                    Padding="56,16,0,16"
                    ColumnSpacing="24"
                    RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Main Current:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.MainCurrent, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" mA" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="Temperature:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.Temperature, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" °C" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Supply Voltage:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.SupplyVoltage, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" mV" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="VCC Voltage:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.VccVoltage, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="40,0,0,0"
                        VerticalAlignment="Center"
                        Text=" mV" />
                </Grid>
            </Expander>

            <!--  Z21 Version Info Section (only visible when connected)  -->
            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Header="Versionen"
                IsExpanded="True">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontSize="20" Glyph="&#xE946;" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <Grid
                    Padding="56,16,0,16"
                    ColumnSpacing="24"
                    RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Seriennummer:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.SerialNumber, Mode=OneWay}" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="Firmware Version:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.FirmwareVersion, Mode=OneWay}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Hardware Typ:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                        Text="{x:Bind ViewModel.HardwareType, Mode=OneWay}" />
                </Grid>
            </Expander>

            <!--  Counter Settings Section  -->
            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Header="Counter Settings"
                IsExpanded="True">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontSize="20" Glyph="&#xE823;" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <StackPanel Padding="56,16,0,16" Spacing="16">

                    <!--  Target Lap Count  -->
                    <NumberBox
                        Width="200"
                        HorizontalAlignment="Left"
                        Header="Target Lap Count"
                        Minimum="1"
                        SpinButtonPlacementMode="Inline"
                        Value="{x:Bind ViewModel.GlobalTargetLapCount, Mode=TwoWay}" />

                    <!--  Timer Filter Settings  -->
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="4">
                            <CheckBox Content="Use Timer Filter" IsChecked="{x:Bind ViewModel.UseTimerFilter, Mode=TwoWay}" />
                            <TextBlock
                                Margin="32,0,0,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="Prevents multiple counts from the same train pass"
                                TextWrapping="Wrap" />
                        </StackPanel>

                        <NumberBox
                            Width="200"
                            HorizontalAlignment="Left"
                            Header="Timer Interval (seconds)"
                            IsEnabled="{x:Bind ViewModel.UseTimerFilter, Mode=OneWay}"
                            LargeChange="1"
                            Minimum="1"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{x:Bind ViewModel.TimerIntervalSeconds, Mode=TwoWay}">
                            <NumberBox.Description>
                                <TextBlock Text="Example: 10s for 16-axle trains" TextWrapping="Wrap" />
                            </NumberBox.Description>
                        </NumberBox>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!--  Track Statistics Section (only visible when connected)  -->
            <StackPanel Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon FontSize="20" Glyph="&#xE9D9;" />
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Track Statistics" />
                </StackPanel>

                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Statistics, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="vm:InPortStatistic">
                            <Border
                                Margin="0,0,0,12"
                                Padding="16"
                                Background="{x:Bind BackgroundColorName, Mode=OneWay, Converter={StaticResource HexColorToBrushConverter}}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Grid RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Title: Name (if available) or "InPort X"  -->
                                    <TextBlock
                                        Grid.Row="0"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Text="{x:Bind DisplayName, Mode=OneWay}" />

                                    <!--  Subtitle: InPort number  -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Foreground="White"
                                        Opacity="0.8"
                                        Style="{StaticResource CaptionTextBlockStyle}">
                                        <Run Text="InPort " />
                                        <Run Text="{x:Bind InPort, Mode=OneWay}" />
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="0,4,0,0"
                                        Foreground="White"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind LapCountFormatted, Mode=OneWay}" />

                                    <ProgressBar
                                        Grid.Row="3"
                                        Margin="0,4,0,0"
                                        Maximum="1"
                                        ShowError="False"
                                        ShowPaused="False"
                                        Value="{x:Bind Progress, Mode=OneWay}" />

                                    <Grid Grid.Row="4" ColumnSpacing="16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="White"
                                                Glyph="&#xE916;" />
                                            <TextBlock Foreground="White" Text="Last lap:" />
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{x:Bind LastLapTimeFormatted, Mode=OneWay}" />
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="White"
                                                Glyph="&#xE890;" />
                                            <TextBlock Foreground="White" Text="Last seen:" />
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{x:Bind LastFeedbackTimeFormatted, Mode=OneWay}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <!--  Reset Button  -->
                <Button
                    MinWidth="200"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.ResetCountersCommand}"
                    Content="Reset All Counters" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>