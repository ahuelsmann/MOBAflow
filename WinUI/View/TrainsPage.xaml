<Page
    x:Class="Moba.WinUI.View.TrainsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Moba.SharedUI.ViewModel"
    DataContext="{x:Bind ViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" MinWidth="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" MinWidth="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1.5*" MinWidth="300" />
        </Grid.ColumnDefinitions>

        <!--  Column 0: Locomotives  -->
        <Grid Grid.Column="0" Padding="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header: Title + Actions  -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Padding="8,0,0,0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Locomotives" />
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="2">
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.AddLocomotiveCommand}"
                        ToolTipService.ToolTip="Add a new locomotive">
                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                    </Button>
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.DeleteLocomotiveCommand}"
                        ToolTipService.ToolTip="Delete the selected locomotive">
                        <FontIcon FontSize="14" Glyph="&#xE74D;" />
                    </Button>
                </StackPanel>
            </Grid>

            <AutoSuggestBox
                Grid.Row="1"
                Margin="0,0,0,8"
                PlaceholderText="Search locomotives..."
                QueryIcon="Find"
                Text="{x:Bind ViewModel.LocomotiveSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ListView
                Grid.Row="2"
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind ViewModel.SelectedProject.Locomotives, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedLocomotive, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.AddLocomotiveCommand}" Text="Add Locomotive">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE710;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.DeleteLocomotiveCommand}" Text="Delete Locomotive">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE738;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </ListView.ContextFlyout>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:LocomotiveViewModel">
                        <Grid Padding="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                FontSize="16"
                                Glyph="&#xE7C0;" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind Name, Mode=OneWay}" />
                            <FontIcon
                                Grid.Column="2"
                                FontSize="12"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Glyph="&#xEB9F;"
                                Visibility="{x:Bind HasPhoto, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Border
            Grid.Column="1"
            Width="1"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

        <!--  Column 2: Passenger Wagons  -->
        <Grid Grid.Column="2" Padding="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header: Title + Actions  -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Padding="8,0,0,0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Passenger Wagons" />
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="2">
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.AddPassengerWagonCommand}"
                        ToolTipService.ToolTip="Add a new passenger wagon">
                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                    </Button>
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.DeletePassengerWagonCommand}"
                        ToolTipService.ToolTip="Delete the selected passenger wagon">
                        <FontIcon FontSize="14" Glyph="&#xE74D;" />
                    </Button>
                </StackPanel>
            </Grid>

            <AutoSuggestBox
                Grid.Row="1"
                Margin="0,0,0,8"
                PlaceholderText="Search passenger wagons..."
                QueryIcon="Find"
                Text="{x:Bind ViewModel.PassengerWagonSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ListView
                Grid.Row="2"
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind ViewModel.SelectedProject.PassengerWagons, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedPassengerWagon, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.AddPassengerWagonCommand}" Text="Add Passenger Wagon">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE710;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.DeletePassengerWagonCommand}" Text="Delete Passenger Wagon">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE738;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </ListView.ContextFlyout>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:PassengerWagonViewModel">
                        <Grid Padding="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                FontSize="16"
                                Glyph="&#xE7C2;" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind Name, Mode=OneWay}" />
                            <FontIcon
                                Grid.Column="2"
                                FontSize="12"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Glyph="&#xEB9F;"
                                Visibility="{x:Bind HasPhoto, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Border
            Grid.Column="3"
            Width="1"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

        <!--  Column 4: Goods Wagons  -->
        <Grid Grid.Column="4" Padding="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header: Title + Actions  -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Padding="8,0,0,0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Goods Wagons" />
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="2">
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.AddGoodsWagonCommand}"
                        ToolTipService.ToolTip="Add a new goods wagon">
                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                    </Button>
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.DeleteGoodsWagonCommand}"
                        ToolTipService.ToolTip="Delete the selected goods wagon">
                        <FontIcon FontSize="14" Glyph="&#xE74D;" />
                    </Button>
                </StackPanel>
            </Grid>

            <AutoSuggestBox
                Grid.Row="1"
                Margin="0,0,0,8"
                PlaceholderText="Search goods wagons..."
                QueryIcon="Find"
                Text="{x:Bind ViewModel.GoodsWagonSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ListView
                Grid.Row="2"
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind ViewModel.SelectedProject.GoodsWagons, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedGoodsWagon, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.AddGoodsWagonCommand}" Text="Add Goods Wagon">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE710;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.DeleteGoodsWagonCommand}" Text="Delete Goods Wagon">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE738;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </ListView.ContextFlyout>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:GoodsWagonViewModel">
                        <Grid Padding="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                FontSize="16"
                                Glyph="&#xE7B8;" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind Name, Mode=OneWay}" />
                            <FontIcon
                                Grid.Column="2"
                                FontSize="12"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Glyph="&#xEB9F;"
                                Visibility="{x:Bind HasPhoto, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Border
            Grid.Column="5"
            Width="1"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

        <!--  Column 6: Properties Panel  -->
        <ScrollViewer Grid.Column="6" Padding="8">
            <Grid MaxWidth="480">
                <!--  Properties Content  -->
                <ContentControl
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Content="{x:Bind ViewModel.TrainsPageSelectedObject, Mode=OneWay}"
                    ContentTemplateSelector="{StaticResource EntityTemplateSelector}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
