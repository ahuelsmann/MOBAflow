<Window
    x:Class="Moba.WinUI.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MOBAflow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  TitleBar  -->
        <TitleBar
            x:Name="AppTitleBar"
            Title="MOBAflow"
            Grid.Row="0"
            IsBackButtonVisible="False"
            IsPaneToggleButtonVisible="False"
            Subtitle="">
            <TitleBar.IconSource>
                <FontIconSource FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7C0;" />
            </TitleBar.IconSource>
        </TitleBar>

        <NavigationView
            x:Name="MainNavigation"
            Grid.Row="1"
            CompactModeThresholdWidth="400"
            IsSettingsVisible="False"
            ItemInvoked="NavigationView_ItemInvoked"
            OpenPaneLength="200"
            PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Overview"
                    Icon="Home"
                    Tag="overview" />
                <NavigationViewItemSeparator />
                <NavigationViewItem Content="Solution" Tag="solution">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B7;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Journeys" Tag="journeys">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7C1;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Workflows" Tag="workflows">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE945;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem Content="Feedback Points" Tag="feedbackpoints">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE72C;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem Content="Track Plan" Tag="trackplaneditor">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE809;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Journey Map" Tag="journeymap">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE81D;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem Content="Settings" Tag="settings">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE115;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!--  Content area with Toolbar and Pages  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Compact CommandBar with labels on the side  -->
                <CommandBar
                    Grid.Row="0"
                    Background="Transparent"
                    DefaultLabelPosition="Right"
                    IsOpen="False"
                    OverflowButtonVisibility="Auto">
                    <!--  File Operations  -->
                    <AppBarButton
                        Command="{x:Bind ViewModel.NewSolutionCommand}"
                        Icon="Add"
                        Label="New" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.LoadSolutionCommand}"
                        Icon="OpenFile"
                        Label="Open" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SaveSolutionCommand}"
                        Icon="Save"
                        Label="Save" />
                    <AppBarSeparator />
                    <!--  Z21 Connection  -->
                    <AppBarButton
                        Command="{x:Bind CounterViewModel.ConnectCommand}"
                        Icon="Globe"
                        Label="Connect" />
                    <AppBarButton
                        Command="{x:Bind CounterViewModel.DisconnectCommand}"
                        Icon="Cancel"
                        Label="Disconnect" />
                    <AppBarToggleButton
                        Click="TrackPower_Click"
                        IsChecked="{x:Bind CounterViewModel.IsTrackPowerOn, Mode=OneWay}"
                        IsEnabled="{x:Bind CounterViewModel.IsConnected, Mode=OneWay}"
                        Label="Power">
                        <AppBarToggleButton.Icon>
                            <FontIcon Glyph="&#xE945;" />
                        </AppBarToggleButton.Icon>
                    </AppBarToggleButton>
                    <AppBarSeparator />
                    <!--  Simulation  -->
                    <AppBarButton
                        Command="{x:Bind ViewModel.SimulateFeedbackCommand}"
                        Icon="Play"
                        Label="Simulate" />
                    <AppBarElementContainer VerticalAlignment="Center">
                        <TextBox
                            Width="60"
                            PlaceholderText="InPort"
                            Text="{x:Bind ViewModel.SimulateInPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </AppBarElementContainer>
                    <AppBarButton
                        Command="{x:Bind ViewModel.ResetJourneyCommand}"
                        Icon="Refresh"
                        Label="Reset" />
                    <AppBarSeparator />
                    <!--  Speech  -->
                    <AppBarElementContainer VerticalAlignment="Center">
                        <ComboBox
                            MinWidth="160"
                            ItemsSource="{x:Bind ViewModel.AvailableSpeechEngines, Mode=OneTime}"
                            SelectedItem="{x:Bind ViewModel.SelectedSpeechEngine, Mode=TwoWay}" />
                    </AppBarElementContainer>
                    <AppBarButton
                        Command="{x:Bind ViewModel.TestSpeechCommand}"
                        Icon="Volume"
                        Label="Test" />
                    <AppBarSeparator />
                    <!--  Theme Toggle  -->
                    <AppBarToggleButton IsChecked="{x:Bind ViewModel.IsDarkMode, Mode=TwoWay}" Label="Dark">
                        <AppBarToggleButton.Icon>
                            <FontIcon Glyph="&#xE793;" />
                        </AppBarToggleButton.Icon>
                    </AppBarToggleButton>

                    <!--  Secondary Commands (overflow menu)  -->
                    <CommandBar.SecondaryCommands>
                        <AppBarButton
                            Command="{x:Bind TrackPlanEditorViewModel.BrowseAndLoadAnyRailLayoutCommand}"
                            Icon="Import"
                            Label="Import AnyRail" />
                        <AppBarButton Command="{x:Bind TrackPlanEditorViewModel.ExportToAnyRailCommand}" Label="Export AnyRail">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xEDE1;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>

                <!--  Content Frame for page navigation  -->
                <Frame x:Name="ContentFrame" Grid.Row="1" />
            </Grid>
        </NavigationView>

        <!--  StatusBar - Over the entire width of the window  -->
        <Grid
            Grid.Row="2"
            Height="32"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Z21 Status (links)  -->
            <StackPanel
                Grid.Column="0"
                Margin="12,0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    x:Name="Z21StatusIcon"
                    FontSize="14"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                    Glyph="&#xF384;" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.Z21StatusText, Mode=OneWay}" />
            </StackPanel>

            <!--  Divider  -->
            <Border
                Grid.Column="1"
                Width="1"
                Height="20"
                Margin="8,0"
                VerticalAlignment="Center"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

            <!--  Azure Speech Health Status  -->
            <StackPanel
                x:Name="SpeechHealthPanel"
                Grid.Column="2"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    x:Name="SpeechHealthIcon"
                    FontSize="14"
                    Foreground="{ThemeResource SystemFillColorCautionBrush}"
                    Glyph="{x:Bind ViewModel.SpeechHealthIcon, Mode=OneWay}" />
                <TextBlock
                    x:Name="SpeechHealthText"
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.SpeechHealthStatus, Mode=OneWay}"
                    ToolTipService.ToolTip="Azure Speech Service Health Status" />
            </StackPanel>

            <!--  Solution Path (rechts)  -->
            <TextBlock
                Grid.Column="3"
                Margin="12,0"
                VerticalAlignment="Center"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind ViewModel.CurrentSolutionPath, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />
        </Grid>
    </Grid>
</Window>