<Window
    x:Class="Moba.WinUI.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:Moba.WinUI.View"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    Title="MOBAflow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid PreviewKeyDown="OnKeyDown">
        <Grid.Resources>
            <view:PropertyDataTemplateSelector x:Key="PropertyTemplateSelector">
                <view:PropertyDataTemplateSelector.TextBoxTemplate>
                    <DataTemplate x:DataType="vm:PropertyViewModel">
                        <StackPanel Margin="0,0,0,16" Spacing="4">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Name}"
                                TextWrapping="NoWrap" />

                            <TextBox
                                HorizontalAlignment="Stretch"
                                Text="{x:Bind Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </DataTemplate>
                </view:PropertyDataTemplateSelector.TextBoxTemplate>
                <view:PropertyDataTemplateSelector.CheckBoxTemplate>
                    <DataTemplate x:DataType="vm:PropertyViewModel">
                        <StackPanel Margin="0,0,0,16" Spacing="4">
                            <CheckBox
                                Content="{x:Bind Name}"
                                FontWeight="SemiBold"
                                IsChecked="{x:Bind BoolValue, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </view:PropertyDataTemplateSelector.CheckBoxTemplate>
                <view:PropertyDataTemplateSelector.ComboBoxTemplate>
                    <DataTemplate x:DataType="vm:PropertyViewModel">
                        <StackPanel Margin="0,0,0,16" Spacing="4">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Name}"
                                TextWrapping="NoWrap" />

                            <ComboBox
                                HorizontalAlignment="Stretch"
                                ItemsSource="{x:Bind EnumValues}"
                                SelectedItem="{x:Bind EnumValue, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </view:PropertyDataTemplateSelector.ComboBoxTemplate>
                <view:PropertyDataTemplateSelector.ReferenceComboBoxTemplate>
                    <DataTemplate x:DataType="vm:PropertyViewModel">
                        <StackPanel Margin="0,0,0,16" Spacing="4">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Name}"
                                TextWrapping="NoWrap" />

                            <ComboBox
                                HorizontalAlignment="Stretch"
                                DisplayMemberPath="Name"
                                ItemsSource="{x:Bind ReferenceValues}"
                                PlaceholderText="(None)"
                                SelectedItem="{x:Bind ReferenceValue, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </view:PropertyDataTemplateSelector.ReferenceComboBoxTemplate>
            </view:PropertyDataTemplateSelector>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <NavigationView
            Grid.Row="0"
            IsSettingsVisible="False"
            PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Overview"
                    Icon="Home"
                    Tag="overview" />
                <NavigationViewItem
                    Content="Solution Explorer"
                    Icon="Folder"
                    Tag="explorer" />
            </NavigationView.MenuItems>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Toolbar  -->
                <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                    <AppBarButton
                        Command="{x:Bind ViewModel.LoadSolutionCommand}"
                        Icon="OpenFile"
                        Label="Load" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SaveSolutionCommand}"
                        Icon="Save"
                        Label="Save" />
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.UndoCommand}"
                        Icon="Undo"
                        Label="Undo"
                        ToolTipService.ToolTip="Undo last change (Ctrl+Z)" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.RedoCommand}"
                        Icon="Redo"
                        Label="Redo"
                        ToolTipService.ToolTip="Redo last undone change (Ctrl+Y)" />
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.AddProjectCommand}"
                        Icon="Add"
                        IsEnabled="{x:Bind ViewModel.HasSolution, Mode=OneWay}"
                        Label="Add Project" />
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.ConnectToZ21Command}"
                        Label="Connect Z21"
                        ToolTipService.ToolTip="Connect to Z21 Command Station">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8EB;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        Command="{x:Bind ViewModel.DisconnectFromZ21Command}"
                        Label="Disconnect"
                        ToolTipService.ToolTip="Disconnect from Z21">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8F1;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SimulateFeedbackCommand}"
                        Label="Simulate"
                        ToolTipService.ToolTip="Simulate Feedback">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE945;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarElementContainer VerticalAlignment="Center">
                        <TextBox
                            Width="80"
                            PlaceholderText="InPort"
                            Text="{x:Bind ViewModel.SimulateInPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </AppBarElementContainer>
                </CommandBar>

                <!--  Content Area  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" MinWidth="250" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" MinWidth="400" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="300" MinWidth="200" />
                    </Grid.ColumnDefinitions>

                    <!--  TreeView: Solution Explorer  -->
                    <Grid Grid.Column="0" Background="{ThemeResource LayerFillColorDefaultBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="16,12"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Solution Explorer" />

                        <ScrollViewer
                            Grid.Row="1"
                            Padding="8"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto">
                            <TreeView 
                                ItemsSource="{x:Bind ViewModel.TreeNodes, Mode=OneWay}" 
                                SelectionChanged="SolutionTreeView_SelectionChanged"
                                RightTapped="TreeView_RightTapped"
                                AllowDrop="True"
                                CanDragItems="True"
                                CanReorderItems="True"
                                DragItemsCompleted="TreeView_DragItemsCompleted">
                                <TreeView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:TreeNodeViewModel">
                                        <TreeViewItem 
                                            IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                            ItemsSource="{x:Bind Children, Mode=OneWay}">
                                            <TreeViewItem.ContextFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Move Up" Click="MoveStationUp_Click" />
                                                    <MenuFlyoutItem Text="Move Down" Click="MoveStationDown_Click" />
                                                </MenuFlyout>
                                            </TreeViewItem.ContextFlyout>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon FontSize="16" Glyph="{x:Bind Icon, Mode=OneWay}" />
                                                <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" TextWrapping="NoWrap" />
                                            </StackPanel>
                                        </TreeViewItem>
                                    </DataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </ScrollViewer>
                    </Grid>

                    <!--  Splitter  -->
                    <Border
                        Grid.Column="1"
                        Width="1"
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                    <!--  Property Grid  -->
                    <Grid Grid.Column="2" Background="{ThemeResource LayerFillColorDefaultBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            Grid.Row="0"
                            Margin="16,12"
                            Spacing="4">
                            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Properties" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind ViewModel.SelectedNodeType, Mode=OneWay}" />
                        </StackPanel>

                        <ScrollViewer
                            Grid.Row="1"
                            Padding="16,0,16,16"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Properties, Mode=OneWay}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="vm:PropertyViewModel">
                                        <ContentControl
                                            HorizontalContentAlignment="Stretch"
                                            Content="{x:Bind}"
                                            ContentTemplateSelector="{StaticResource PropertyTemplateSelector}" />
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </ScrollViewer>
                    </Grid>

                    <!--  Splitter  -->
                    <Border
                        Grid.Column="3"
                        Width="1"
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                    <!--  City Browser  -->
                    <Grid Grid.Column="4" Background="{ThemeResource LayerFillColorDefaultBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="16,12"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Cities" />

                        <Button
                            Grid.Row="1"
                            Margin="16,0,16,8"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.LoadCitiesFromFileCommand}"
                            Content="Load Cities" />

                        <ListView
                            Grid.Row="2"
                            Margin="8,0"
                            ItemsSource="{x:Bind ViewModel.AvailableCities, Mode=OneWay}"
                            SelectedItem="{x:Bind ViewModel.SelectedCity, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Padding="8" Spacing="4">
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="{Binding Name}"
                                            TextWrapping="NoWrap" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{Binding Stations[0].Name}"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Button
                            Grid.Row="3"
                            Margin="16,8,16,16"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.AddStationToJourneyCommand}"
                            Content="Add to Journey"
                            ToolTipService.ToolTip="Select a city and a journey to add the station" />
                    </Grid>
                </Grid>
            </Grid>
        </NavigationView>

        <!--  StatusBar - Ãœber die gesamte Fensterbreite  -->
        <Grid
            Grid.Row="1"
            Height="32"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Z21 Status (links)  -->
            <StackPanel
                Grid.Column="0"
                Margin="12,0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    x:Name="Z21StatusIcon"
                    FontSize="14"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                    Glyph="&#xF384;" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.Z21StatusText, Mode=OneWay}" />
            </StackPanel>

            <!--  Divider  -->
            <Border
                Grid.Column="1"
                Width="1"
                Height="20"
                Margin="8,0"
                VerticalAlignment="Center"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

            <!--  Azure Speech Health Status  -->
            <StackPanel
                x:Name="SpeechHealthPanel"
                Grid.Column="2"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    x:Name="SpeechHealthIcon"
                    FontSize="14"
                    Foreground="{ThemeResource SystemFillColorCautionBrush}"
                    Glyph="&#xE946;" />
                <TextBlock
                    x:Name="SpeechHealthText"
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Azure Speech: Checking..."
                    ToolTipService.ToolTip="Azure Speech Service Health Status" />
            </StackPanel>

            <!--  Solution Path (rechts)  -->
            <TextBlock
                Grid.Column="3"
                Margin="12,0"
                VerticalAlignment="Center"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind ViewModel.CurrentSolutionPath, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />
        </Grid>
    </Grid>
</Window>