<Window
    x:Class="Moba.WinUI.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MOBAflow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  TitleBar  -->
        <TitleBar
            x:Name="AppTitleBar"
            Title="MOBAflow"
            Grid.Row="0"
            IsBackButtonVisible="False"
            IsPaneToggleButtonVisible="False"
            Subtitle="">
            <TitleBar.IconSource>
                <FontIconSource FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7C0;" />
            </TitleBar.IconSource>
        </TitleBar>

        <NavigationView
            x:Name="MainNavigation"
            Grid.Row="1"
            CompactModeThresholdWidth="400"
            IsSettingsVisible="False"
            ItemInvoked="NavigationView_ItemInvoked"
            OpenPaneLength="200"
            PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Overview"
                    Icon="Home"
                    Tag="overview" />
                <NavigationViewItem Content="Editor" Tag="editor">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE70F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Settings" Tag="settings">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE115;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!--  Content area with Toolbar and Pages  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Toolbar - Always visible across all views  -->
                <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                    <AppBarButton
                        Command="{x:Bind ViewModel.LoadSolutionCommand}"
                        Icon="OpenFile"
                        Label="Load" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SaveSolutionCommand}"
                        Icon="Save"
                        Label="Save" />
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.AddProjectCommand}"
                        Icon="Add"
                        IsEnabled="{x:Bind ViewModel.HasSolution, Mode=OneWay}"
                        Label="Add Project" />
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind CounterViewModel.ConnectCommand}"
                        Label="Connect Z21"
                        ToolTipService.ToolTip="Connect to Z21 Command Station">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8EB;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton
                        Command="{x:Bind CounterViewModel.DisconnectCommand}"
                        Label="Disconnect"
                        ToolTipService.ToolTip="Disconnect from Z21">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8F1;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarSeparator />
                    <AppBarToggleButton
                        Click="TrackPower_Click"
                        IsChecked="{x:Bind CounterViewModel.IsTrackPowerOn, Mode=OneWay}"
                        IsEnabled="{x:Bind CounterViewModel.IsConnected, Mode=OneWay}"
                        Label="Track Power"
                        ToolTipService.ToolTip="Toggle Track Power ON/OFF">
                        <AppBarToggleButton.Icon>
                            <FontIcon Glyph="&#xE945;" />
                        </AppBarToggleButton.Icon>
                    </AppBarToggleButton>
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SimulateFeedbackCommand}"
                        Label="Simulate"
                        ToolTipService.ToolTip="Simulate Feedback">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE945;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarElementContainer VerticalAlignment="Center">
                        <TextBox
                            Width="80"
                            PlaceholderText="InPort"
                            Text="{x:Bind ViewModel.SimulateInPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </AppBarElementContainer>
                    <AppBarSeparator />
                    <AppBarButton
                        Click="ThemeToggle_Click"
                        Label=""
                        ToolTipService.ToolTip="Toggle Dark/Light Mode">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE706;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <!--  Content Frame for page navigation  -->
                <Frame x:Name="ContentFrame" Grid.Row="1" />
            </Grid>
        </NavigationView>

        <!--  StatusBar - Over the entire width of the window  -->
        <Grid
            Grid.Row="2"
            Height="32"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Z21 Status (links)  -->
            <StackPanel
                Grid.Column="0"
                Margin="12,0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    x:Name="Z21StatusIcon"
                    FontSize="14"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                    Glyph="&#xF384;" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.Z21StatusText, Mode=OneWay}" />
            </StackPanel>

            <!--  Divider  -->
            <Border
                Grid.Column="1"
                Width="1"
                Height="20"
                Margin="8,0"
                VerticalAlignment="Center"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

            <!--  Azure Speech Health Status  -->
            <StackPanel
                x:Name="SpeechHealthPanel"
                Grid.Column="2"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    x:Name="SpeechHealthIcon"
                    FontSize="14"
                    Foreground="{ThemeResource SystemFillColorCautionBrush}"
                    Glyph="&#xE946;" />
                <TextBlock
                    x:Name="SpeechHealthText"
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Azure Speech: Checking..."
                    ToolTipService.ToolTip="Azure Speech Service Health Status" />
            </StackPanel>

            <!--  Solution Path (rechts)  -->
            <TextBlock
                Grid.Column="3"
                Margin="12,0"
                VerticalAlignment="Center"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind ViewModel.CurrentSolutionPath, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />
        </Grid>
    </Grid>
</Window>