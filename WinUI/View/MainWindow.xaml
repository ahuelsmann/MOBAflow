<Window
    x:Class="Moba.WinUI.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    Title="MOBAflow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <NavigationView x:Name="Nav" PaneDisplayMode="Left" IsSettingsVisible="False">
            <NavigationView.Header>
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarButton Icon="OpenFile" Label="Laden" Command="{x:Bind ViewModel.LoadSolutionCommand}" />
                    <AppBarButton Icon="Save" Label="Speichern" Command="{x:Bind ViewModel.SaveSolutionCommand}" />
                    <AppBarSeparator />
                    <AppBarElementContainer>
                        <TextBlock Text="{x:Bind ViewModel.CurrentSolutionPath, Mode=OneWay}" VerticalAlignment="Center" />
                    </AppBarElementContainer>
                </CommandBar>
            </NavigationView.Header>
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Content="Ãœbersicht" Tag="overview" />
                <NavigationViewItem Icon="Document" Content="Projekte" Tag="projects" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>