<Window
    x:Class="Moba.WinUI.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MOBAflow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  TitleBar  -->
        <TitleBar
            x:Name="AppTitleBar"
            Title="MOBA"
            Grid.Row="0"
            IsBackButtonVisible="False"
            IsPaneToggleButtonVisible="False"
            Subtitle="flow">
            <TitleBar.IconSource>
                <FontIconSource FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7C0;" />
            </TitleBar.IconSource>
        </TitleBar>

        <!--  NavigationView with Auto pane display mode for responsive behavior  -->
        <NavigationView
            x:Name="MainNavigation"
            Grid.Row="1"
            CompactModeThresholdWidth="600"
            IsSettingsVisible="False"
            ItemInvoked="NavigationView_ItemInvoked"
            OpenPaneLength="240"
            PaneDisplayMode="Auto">
            <!--  MenuItems are dynamically generated from NavigationRegistry in code-behind  -->
            <NavigationView.MenuItems />

            <!--  Content area with Toolbar and Pages  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Theme Toggle, Transaction Code, and CommandBar on same row  -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Theme Toggle (left)  -->
                    <ToggleSwitch
                        x:Name="ThemeToggleSwitch"
                        Grid.Column="0"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        IsOn="{x:Bind ViewModel.IsDarkMode, Mode=TwoWay}"
                        OffContent="Light"
                        OnContent="Dark"
                        Toggled="ThemeToggleSwitch_Toggled" />

                    <!--  Transaction Code Band (SAP-style command palette, center)  -->
                    <Border
                        Grid.Column="1"
                        Padding="8,4"
                        HorizontalAlignment="Center"
                        Background="#0066B3"
                        CornerRadius="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="White"
                                Glyph="&#xE756;" />
                            <TextBox
                                x:Name="TransactionCodeTextBox"
                                Width="120"
                                VerticalAlignment="Center"
                                FontFamily="Consolas"
                                FontSize="13"
                                KeyDown="TransactionCodeTextBox_KeyDown"
                                PlaceholderText="page code"
                                Text="{x:Bind ViewModel.TransactionCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button
                                Padding="8,4"
                                Background="#FFC107"
                                Command="{x:Bind ViewModel.ExecuteTransactionCodeCommand}"
                                CornerRadius="4"
                                ToolTipService.ToolTip="Execute Transaction Code (Enter)">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon
                                        FontSize="12"
                                        Foreground="#003366"
                                        Glyph="&#xE768;" />
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Foreground="#003366"
                                        Text="Execute" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!--  Compact CommandBar (right side)  -->
                    <CommandBar
                        Grid.Column="2"
                        Background="Transparent"
                        DefaultLabelPosition="Right"
                        IsOpen="False"
                        OverflowButtonVisibility="Auto">
                        <!--  File Operations  -->
                        <AppBarButton Command="{x:Bind ViewModel.NewSolutionCommand}" Label="New">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xE729;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton Command="{x:Bind ViewModel.LoadSolutionCommand}" Label="Open">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xE838;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarSeparator />
                        <!--  Simulation  -->
                        <AppBarButton
                            Command="{x:Bind ViewModel.SimulateFeedbackCommand}"
                            Icon="Play"
                            Label="Simulate" />
                        <AppBarElementContainer VerticalAlignment="Center">
                            <NumberBox
                                Minimum="1"
                                SpinButtonPlacementMode="Inline"
                                ToolTipService.ToolTip="Feedback Point (InPort)"
                                Value="{x:Bind ViewModel.SimulateInPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </AppBarElementContainer>
                        <AppBarSeparator />
                        <AppBarButton
                            Command="{x:Bind ViewModel.ResetJourneyCommand}"
                            Icon="Refresh"
                            Label="Reset" />
                    </CommandBar>
                </Grid>

                <!--  Content Frame for page navigation  -->
                <Frame x:Name="ContentFrame" Grid.Row="1" />
            </Grid>
        </NavigationView>

        <!--  StatusBar  -->
        <Grid
            Grid.Row="2"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Z21 Status + Track Power (links)  -->
            <StackPanel
                Grid.Column="0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <!--  Connection Status Icon (auto-updated based on IsConnected)  -->
                <FontIcon
                    x:Name="Z21StatusIcon"
                    Margin="12,0,8,0"
                    FontSize="14"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                    Glyph="&#xF384;" />
                <TextBlock
                    Margin="0,0,16,0"
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" />
                <!--  Track Power Toggle (like Roco Z21 app)  -->
                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
                    <ToggleSwitch
                        FontSize="12"
                        IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}"
                        IsOn="{x:Bind ViewModel.IsTrackPowerOn, Mode=TwoWay}"
                        OffContent="Track Power"
                        OnContent="Track Power"
                        Toggled="TrackPower_Toggled" />
                </StackPanel>
            </StackPanel>

            <!--  Azure Speech Health Status  -->
            <StackPanel
                Grid.Column="2"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <AppBarElementContainer VerticalAlignment="Center">
                    <DropDownButton MinWidth="160">
                        <DropDownButton.Content>
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind ViewModel.SelectedSpeechEngine, Mode=OneWay}" />
                        </DropDownButton.Content>
                        <DropDownButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Command="{x:Bind ViewModel.SelectSpeechEngineCommand}"
                                    CommandParameter="System Speech (Windows SAPI)"
                                    Text="System Speech (Windows SAPI)" />
                                <MenuFlyoutItem
                                    Command="{x:Bind ViewModel.SelectSpeechEngineCommand}"
                                    CommandParameter="Azure Cognitive Services"
                                    Text="Azure Cognitive Services" />
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </AppBarElementContainer>
                <FontIcon
                    Margin="12,0,12,0"
                    FontSize="14"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                    Glyph="{x:Bind ViewModel.SpeechHealthIcon, Mode=OneWay}" />
            </StackPanel>

            <!--  Solution Path  -->
            <TextBlock
                Grid.Column="3"
                Margin="12,0"
                VerticalAlignment="Center"
                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind ViewModel.CurrentSolutionPath, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />
        </Grid>
    </Grid>
</Window>