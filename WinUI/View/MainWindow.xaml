<Window
    x:Class="Moba.WinUI.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    Title="MOBAflow"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <NavigationView
            x:Name="Nav"
            IsSettingsVisible="False"
            PaneDisplayMode="Left">
            <NavigationView.Header>
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarButton
                        Command="{x:Bind ViewModel.LoadSolutionCommand}"
                        Icon="OpenFile"
                        Label="Load" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SaveSolutionCommand}"
                        Icon="Save"
                        Label="Save" />
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.AddProjectCommand}"
                        Icon="Add"
                        IsEnabled="{x:Bind ViewModel.HasSolution, Mode=OneWay}"
                        Label="Add Project" />
                    <AppBarSeparator />
                    <AppBarElementContainer>
                        <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.CurrentSolutionPath, Mode=OneWay}" />
                    </AppBarElementContainer>
                </CommandBar>
            </NavigationView.Header>
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Overview"
                    Icon="Home"
                    Tag="overview" />
                <NavigationViewItem
                    Content="Solution Explorer"
                    Icon="Folder"
                    Tag="explorer" />
            </NavigationView.MenuItems>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  TreeView: Solution Explorer  -->
                <Grid Grid.Column="0" Background="{ThemeResource LayerFillColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="16,12"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Solution Explorer" />

                    <ScrollViewer Grid.Row="1" Padding="8">
                        <TreeView
                            x:Name="SolutionTreeView"
                            ItemsSource="{x:Bind ViewModel.TreeNodes, Mode=OneWay}"
                            SelectionChanged="SolutionTreeView_SelectionChanged">
                            <TreeView.ItemTemplate>
                                <DataTemplate x:DataType="vm:TreeNodeViewModel">
                                    <TreeViewItem ItemsSource="{x:Bind Children, Mode=OneWay}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon FontSize="16" Glyph="{x:Bind Icon, Mode=OneWay}" />
                                            <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" />
                                        </StackPanel>
                                    </TreeViewItem>
                                </DataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </ScrollViewer>
                </Grid>

                <!--  Splitter  -->
                <Border
                    Grid.Column="1"
                    Width="1"
                    Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                <!--  Property Grid  -->
                <Grid Grid.Column="2" Background="{ThemeResource LayerFillColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="16,12"
                        Spacing="4">
                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Properties" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind ViewModel.SelectedNodeType, Mode=OneWay}" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" Padding="16,0,16,16">
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Properties, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="vm:PropertyViewModel">
                                    <Grid Margin="0,8" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind Name}" />

                                        <TextBox Grid.Column="1" Text="{x:Bind Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </NavigationView>
    </Grid>
</Window>