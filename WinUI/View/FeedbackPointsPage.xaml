<Page
    x:Class="Moba.WinUI.View.FeedbackPointsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:domain="using:Moba.Domain"
    DataContext="{x:Bind ViewModel}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                Width="400"
                MinWidth="300"
                MaxWidth="500" />
        </Grid.ColumnDefinitions>

        <!--  Feedback Points List  -->
        <Grid Grid.Column="0" Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header: Title + Actions  -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Feedback Points" />
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="2">
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.AddFeedbackPointCommand}"
                        ToolTipService.ToolTip="Create a new feedback point with the next available InPort">
                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                    </Button>
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.DeleteFeedbackPointCommand}"
                        ToolTipService.ToolTip="Remove the selected feedback point">
                        <FontIcon FontSize="14" Glyph="&#xE74D;" />
                    </Button>
                </StackPanel>
            </Grid>

            <!--  ListView  -->
            <ListView
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.SelectedProject.FeedbackPoints, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedFeedbackPoint, Mode=TwoWay}"
                SelectionMode="Single"
                Visibility="{x:Bind ViewModel.SelectedProject, Mode=OneWay, Converter={StaticResource NotNullConverter}}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="domain:FeedbackPointOnTrack">
                        <Grid Padding="8,6">
                            <StackPanel Spacing="4">
                                <TextBlock FontWeight="SemiBold" Text="{Binding Name, Mode=OneWay}" />
                                <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="InPort " />
                                    <Run FontWeight="Bold" Text="{Binding InPort, Mode=OneWay}" />
                                </TextBlock>
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                    Text="{Binding Description, Mode=OneWay}"
                                    TextTrimming="CharacterEllipsis"
                                    Visibility="{Binding Description, Mode=OneWay, Converter={StaticResource NotNullConverter}}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!--  Empty State  -->
            <TextBlock
                Grid.Row="2"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="Please select a project to manage feedback points."
                Visibility="{x:Bind ViewModel.SelectedProject, Mode=OneWay, Converter={StaticResource NullConverter}}" />
        </Grid>

        <!--  Vertical Divider  -->
        <Border
            Grid.Column="1"
            Width="1"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

        <!--  Properties Panel  -->
        <Grid Grid.Column="2" Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ContentControl
                Grid.Row="0"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Content="{x:Bind ViewModel.SelectedFeedbackPoint, Mode=OneWay}"
                ContentTemplateSelector="{StaticResource EntityTemplateSelector}" />
        </Grid>
    </Grid>
</Page>
