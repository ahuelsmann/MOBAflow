<Page
    x:Class="Moba.WinUI.View.ProjectConfigurationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Moba.WinUI.Converter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    x:Name="PageRoot"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="16,12"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="Project Configuration" />

        <Pivot Grid.Row="1">
            <!--  Journeys Tab  -->
            <PivotItem Header="Journeys">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="16,8"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.AddJourneyCommand}"
                            Content="+"
                            Style="{StaticResource AccentButtonStyle}"
                            ToolTipService.ToolTip="Add Journey" />
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.DeleteJourneyCommand}"
                            Content="-"
                            ToolTipService.ToolTip="Delete Journey" />
                    </StackPanel>

                    <ListView
                        Grid.Row="1"
                        Margin="16,0"
                        ItemsSource="{x:Bind ViewModel.MainWindowViewModel.CurrentProjectViewModel.Journeys, Mode=OneWay}"
                        SelectedItem="{Binding MainWindowViewModel.SelectedJourney, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="{ThemeResource SystemBaseLowColor}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="220" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Name" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="InPort" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Behavior on Last Stop" />
                                    <TextBlock
                                        Grid.Column="3"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Description" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:JourneyViewModel">
                                <Grid
                                    Height="48"
                                    Padding="12,0"
                                    AutomationProperties.Name="{x:Bind Name}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="220" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{x:Bind Name, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind InPort, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind BehaviorOnLastStop, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Description, Mode=OneWay}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>

            <!--  Stations Tab  -->
            <PivotItem Header="Stations">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="16,8"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.AddStationCommand}"
                            Content="+"
                            Style="{StaticResource AccentButtonStyle}"
                            ToolTipService.ToolTip="Add Station" />
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.DeleteStationCommand}"
                            Content="-"
                            ToolTipService.ToolTip="Delete Station" />
                    </StackPanel>

                    <!--  Stations Section - Station controls without Journey selector  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="16,8"
                        Orientation="Horizontal"
                        Spacing="8" />

                    <ListView
                        Grid.Row="2"
                        Margin="16,0"
                        ItemsSource="{Binding MainWindowViewModel.SelectedJourney.Stations, Mode=OneWay}"
                        SelectedItem="{Binding MainWindowViewModel.SelectedStation, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="{ThemeResource SystemBaseLowColor}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Name" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Track" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Laps to Stop" />
                                    <TextBlock
                                        Grid.Column="3"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Arrival" />
                                    <TextBlock
                                        Grid.Column="4"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Departure" />
                                    <TextBlock
                                        Grid.Column="5"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Workflow" />
                                    <TextBlock
                                        Grid.Column="6"
                                        HorizontalAlignment="Center"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Exit Left" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:StationViewModel">
                                <Grid
                                    Height="48"
                                    Padding="12,0,12,0"
                                    AutomationProperties.Name="{x:Bind Name}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{x:Bind Name, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Track, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind NumberOfLapsToStop, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Arrival, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="4"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Departure, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="5"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Flow.Name, Mode=OneWay}" />
                                    <CheckBox
                                        Grid.Column="6"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsChecked="{x:Bind IsExitOnLeft, Mode=OneWay}"
                                        IsEnabled="False" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>

            <!--  Workflows Tab  -->
            <PivotItem Header="Workflows">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="16,8"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.AddWorkflowCommand}"
                            Content="+"
                            Style="{StaticResource AccentButtonStyle}"
                            ToolTipService.ToolTip="Add Workflow" />
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.DeleteWorkflowCommand}"
                            Content="-"
                            ToolTipService.ToolTip="Delete Workflow" />
                    </StackPanel>

                    <ListView
                        Grid.Row="1"
                        Margin="16,0"
                        ItemsSource="{x:Bind ViewModel.MainWindowViewModel.CurrentProjectViewModel.Workflows, Mode=OneWay}"
                        SelectedItem="{Binding MainWindowViewModel.SelectedWorkflow, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="{ThemeResource SystemBaseLowColor}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Name" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Description" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:WorkflowViewModel">
                                <Grid
                                    Height="48"
                                    Padding="12,0"
                                    AutomationProperties.Name="{x:Bind Name}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{x:Bind Name, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Description, Mode=OneWay}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>

            <!--  Trains Tab  -->
            <PivotItem Header="Trains">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="16,8"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.AddTrainCommand}"
                            Content="+"
                            Style="{StaticResource AccentButtonStyle}"
                            ToolTipService.ToolTip="Add Train" />
                        <Button
                            Command="{x:Bind ViewModel.MainWindowViewModel.DeleteTrainCommand}"
                            Content="-"
                            ToolTipService.ToolTip="Delete Train" />
                    </StackPanel>

                    <ListView
                        Grid.Row="1"
                        Margin="16,0"
                        ItemsSource="{x:Bind ViewModel.MainWindowViewModel.CurrentProjectViewModel.Trains, Mode=OneWay}"
                        SelectedItem="{Binding MainWindowViewModel.SelectedTrain, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="{ThemeResource SystemBaseLowColor}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Name" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Text="Description" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:TrainViewModel">
                                <Grid
                                    Height="48"
                                    Padding="12,0"
                                    AutomationProperties.Name="{x:Bind Name}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{x:Bind Name, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Description, Mode=OneWay}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>


        </Pivot>
    </Grid>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:NullToBooleanConverter x:Key="NullToBooleanConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
</Page>