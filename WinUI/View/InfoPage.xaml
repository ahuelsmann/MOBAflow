<Page
    x:Class="Moba.WinUI.View.InfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:markdown="using:CommunityToolkit.WinUI.UI.Controls">

    <Grid Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
        <ScrollViewer
            Padding="24"
            VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800" Spacing="16">
                <TextBlock
                    FontSize="32"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    Text="MOBAflow" />
                <markdown:MarkdownTextBlock
                    x:Name="ReadmeMarkdownBlock"
                    IsTextSelectionEnabled="True"
                    TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
