<Page
    x:Class="Moba.WinUI.View.LocomotivesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:domain="using:Moba.Domain"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Moba.SharedUI.ViewModel"
    DataContext="{x:Bind ViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3.5*" MinWidth="300" />
        </Grid.ColumnDefinitions>

        <!--  Column 0: Locomotives  -->
        <Grid Grid.Column="0" Padding="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header: Title + Actions  -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Padding="8,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Locomotives" />
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="2">
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.AddLocomotiveCommand}"
                        ToolTipService.ToolTip="Add a new locomotive">
                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                    </Button>
                    <Button
                        Padding="4"
                        Command="{x:Bind ViewModel.DeleteLocomotiveCommand}"
                        ToolTipService.ToolTip="Delete the selected locomotive">
                        <FontIcon FontSize="14" Glyph="&#xE74D;" />
                    </Button>
                </StackPanel>
            </Grid>

            <AutoSuggestBox
                Grid.Row="1"
                Margin="0,0,0,8"
                PlaceholderText="Search locomotives..."
                QueryIcon="Find"
                Text="{x:Bind ViewModel.LocomotiveSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ListView
                Grid.Row="2"
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind ViewModel.SelectedProject.Locomotives, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedLocomotive, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.AddLocomotiveCommand}" Text="Add Locomotive">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE710;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.DeleteLocomotiveCommand}" Text="Delete Locomotive">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE738;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </ListView.ContextFlyout>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:LocomotiveViewModel">
                        <Grid Padding="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                FontSize="16"
                                Glyph="&#xE7C0;" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind Name, Mode=OneWay}" />
                            <FontIcon
                                Grid.Column="2"
                                FontSize="12"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Glyph="&#xEB9F;"
                                Visibility="{x:Bind HasPhoto, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Border
            Grid.Column="1"
            Width="1"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

        <!--  Column 2: Properties + Fahrtenbuch (separate Spalten)  -->
        <Grid Grid.Column="2" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Properties-Spalte  -->
            <ScrollViewer Grid.Column="0" Padding="8,0,0,0">
                <ContentControl
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Content="{x:Bind ViewModel.SelectedLocomotive, Mode=OneWay}"
                    ContentTemplateSelector="{StaticResource EntityTemplateSelector}"
                    Visibility="{x:Bind ViewModel.SelectedLocomotive, Mode=OneWay, Converter={StaticResource NullableConverter}}" />
            </ScrollViewer>

            <!--  Fahrtenbuch-Spalte  -->
            <ScrollViewer Grid.Column="1" Padding="0,0,8,0">
                <StackPanel Spacing="8">
                    <TextBlock
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Fahrtenbuch"
                        Visibility="{x:Bind ViewModel.SelectedLocomotive, Mode=OneWay, Converter={StaticResource NullableConverter}}" />
                    <TextBlock
                        Padding="0,0,0,8"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Wählen Sie eine Lokomotive mit Digitaladresse aus. Fahrten und Haltezeiten von der TrainControlPage werden hier protokolliert."
                        TextWrapping="Wrap"
                        Visibility="{x:Bind ViewModel.SelectedLocomotive, Mode=OneWay, Converter={StaticResource NullableConverter}}" />
                    <ListView ItemsSource="{x:Bind ViewModel.TripLogEntriesForSelectedLocomotive, Mode=OneWay}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="domain:TripLogEntry">
                                <Grid Padding="8,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,8,0"
                                        FontSize="14"
                                        Glyph="{x:Bind IsStopSegment, Mode=OneWay, Converter={StaticResource BoolToTripLogIconConverter}}" />
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontWeight="SemiBold">
                                            <Run Text="{x:Bind StartTime, Mode=OneWay, Converter={StaticResource DateTimeToShortTimeConverter}}" />
                                            <Run Text="–" />
                                            <Run Text="{x:Bind EndTime, Mode=OneWay, Converter={StaticResource DateTimeToShortTimeConverter}}" />
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                            <Run Text="{x:Bind Duration, Mode=OneWay, Converter={StaticResource TimeSpanToDurationConverter}}" />
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Speed, Mode=OneWay}"
                                        Visibility="{x:Bind IsStopSegment, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Halt"
                                        Visibility="{x:Bind IsStopSegment, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Header>
                            <Grid Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontWeight="SemiBold"
                                    Text="Zeit" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontWeight="SemiBold"
                                    Text="Dauer" />
                                <TextBlock
                                    Grid.Column="2"
                                    FontWeight="SemiBold"
                                    Text="Speed" />
                            </Grid>
                        </ListView.Header>
                    </ListView>
                    <TextBlock
                        Padding="8,16,0,0"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Keine Fahrten für diese Lokomotive protokolliert."
                        Visibility="{x:Bind ViewModel.ShowEmptyTripLogMessage, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
