<Page
    x:Class="Moba.WinUI.View.TrackPlanEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Moba.SharedUI.ViewModel">

    <Grid Padding="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <!--  Track Library  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Track Library" />

                <TextBlock
                    Grid.Row="1"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Drag tracks to canvas" />

                <ListView
                    Grid.Row="2"
                    CanDragItems="True"
                    DragItemsStarting="TrackLibrary_DragItemsStarting"
                    ItemsSource="{x:Bind ViewModel.TrackLibrary, Mode=OneWay}"
                    SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="vm:TrackTemplateViewModel">
                            <StackPanel Padding="8,6" Spacing="2">
                                <TextBlock FontWeight="SemiBold" Text="{x:Bind ArticleCode}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{x:Bind Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!--  Track Plan Canvas with Zoom  -->
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="16,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas
                        Width="1000"
                        Height="600"
                        AllowDrop="True"
                        Background="{ThemeResource SolidBackgroundFillColorBaseAltBrush}"
                        DragOver="TrackCanvas_DragOver"
                        Drop="TrackCanvas_Drop"
                        PointerPressed="TrackCanvas_PointerPressed">
                        <Canvas.RenderTransform>
                            <ScaleTransform ScaleX="{x:Bind ViewModel.ZoomFactor, Mode=OneWay}" ScaleY="{x:Bind ViewModel.ZoomFactor, Mode=OneWay}" />
                        </Canvas.RenderTransform>

                        <!--  Track Segments  -->
                        <ItemsControl ItemsSource="{x:Bind ViewModel.Segments, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:TrackSegmentViewModel">
                                    <Grid PointerPressed="Segment_PointerPressed">
                                        <!--  Invisible wider hit area for easier clicking  -->
                                        <Path
                                            Data="{x:Bind PathData, Mode=OneWay}"
                                            Stroke="Transparent"
                                            StrokeThickness="16" />
                                        <!--  Visible track path  -->
                                        <Path
                                            Data="{x:Bind PathData, Mode=OneWay}"
                                            Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                            StrokeThickness="4" />
                                        <!--  Selection highlight (shown when selected)  -->
                                        <Path
                                            Data="{x:Bind PathData, Mode=OneWay}"
                                            Opacity="0.5"
                                            Stroke="Yellow"
                                            StrokeThickness="8"
                                            Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </ScrollViewer>

                <!--  Zoom Controls (bottom right overlay)  -->
                <StackPanel
                    Margin="8"
                    Padding="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="4"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Padding="8,4"
                        Command="{x:Bind ViewModel.ZoomOutCommand}"
                        Content="-"
                        FontWeight="Bold" />
                    <Slider
                        Width="120"
                        VerticalAlignment="Center"
                        Maximum="500"
                        Minimum="5"
                        StepFrequency="5"
                        Value="{x:Bind ViewModel.ZoomLevel, Mode=TwoWay}" />
                    <Button
                        Padding="8,4"
                        Command="{x:Bind ViewModel.ZoomInCommand}"
                        Content="+"
                        FontWeight="Bold" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="{x:Bind ViewModel.ZoomLevelText, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Properties Panel  -->
        <Border
            Grid.Row="0"
            Grid.Column="2"
            Padding="16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Properties" />

                <!--  Layout Info  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="Track Layout" />
                    <TextBox Header="Name" Text="{x:Bind ViewModel.LayoutName, Mode=TwoWay}" />
                </StackPanel>

                <!--  Selected Segment Info  -->
                <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.HasSelectedSegment, Mode=OneWay}">
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="Selected Segment" />
                    <TextBlock FontWeight="SemiBold" Text="{x:Bind ViewModel.SelectedSegment.ArticleCode, Mode=OneWay}" />

                    <!--  InPort Assignment  -->
                    <NumberBox
                        Header="Feedback Point (InPort)"
                        Maximum="2048"
                        Minimum="1"
                        SpinButtonPlacementMode="Inline"
                        Value="{x:Bind ViewModel.InPortInput, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Command="{x:Bind ViewModel.AssignInPortCommand}" Content="Assign" />
                        <Button Command="{x:Bind ViewModel.ClearInPortCommand}" Content="Clear" />
                    </StackPanel>

                    <Button Command="{x:Bind ViewModel.DeleteSegmentCommand}" Content="Delete Segment" />
                </StackPanel>

                <!--  Status  -->
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>