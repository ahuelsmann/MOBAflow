<Page
    x:Class="Moba.WinUI.View.TrackPlanEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Moba.SharedUI.ViewModel"
    KeyDown="Page_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Main Content: Library + Canvas + Properties  -->
        <Grid Grid.Row="0" Margin="24,16,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="280" />
            </Grid.ColumnDefinitions>

            <!--  Track Library  -->
            <Border
                Grid.Column="0"
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Track Library" />

                    <TextBlock
                        Grid.Row="1"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="Drag tracks to canvas"
                        TextWrapping="Wrap" />

                    <ListView
                        Grid.Row="2"
                        CanDragItems="True"
                        DragItemsStarting="TrackLibrary_DragItemsStarting"
                        ItemsSource="{x:Bind ViewModel.TrackLibrary, Mode=OneWay}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:TrackTemplateViewModel">
                                <Grid Padding="8,6">
                                    <StackPanel Spacing="2">
                                        <TextBlock FontWeight="SemiBold" Text="{x:Bind ArticleCode}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{x:Bind Name}"
                                            TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!--  Track Plan Canvas  -->
            <Border
                Grid.Column="1"
                Margin="16,0,0,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <Grid>
                    <ScrollViewer
                        x:Name="CanvasScrollViewer"
                        HorizontalScrollBarVisibility="Auto"
                        MaxZoomFactor="4"
                        MinZoomFactor="0.1"
                        VerticalScrollBarVisibility="Auto"
                        ZoomMode="Enabled">
                        <Canvas
                            x:Name="TrackCanvas"
                            Width="{x:Bind ViewModel.CanvasWidth, Mode=OneWay}"
                            Height="{x:Bind ViewModel.CanvasHeight, Mode=OneWay}"
                            AllowDrop="True"
                            Background="#1a1a1a"
                            DragOver="TrackCanvas_DragOver"
                            Drop="TrackCanvas_Drop"
                            PointerMoved="TrackCanvas_PointerMoved_Drag"
                            PointerPressed="TrackCanvas_PointerPressed_Pan"
                            PointerReleased="TrackCanvas_PointerReleased"
                            RightTapped="TrackCanvas_RightTapped">

                            <!--  Snap Preview Line  -->
                            <Path
                                x:Name="SnapPreviewPath"
                                Opacity="0.6"
                                Stroke="{ThemeResource SystemAccentColorLight2}"
                                StrokeDashArray="5,5"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="6"
                                Visibility="Collapsed" />

                            <!--  Grid Pattern Background  -->
                            <Path
                                Data="M 0,0 L 0,800 M 50,0 L 50,800 M 100,0 L 100,800 M 150,0 L 150,800 M 200,0 L 200,800 M 250,0 L 250,800 M 300,0 L 300,800 M 350,0 L 350,800 M 400,0 L 400,800 M 450,0 L 450,800 M 500,0 L 500,800 M 550,0 L 550,800 M 600,0 L 600,800 M 650,0 L 650,800 M 700,0 L 700,800 M 750,0 L 750,800 M 800,0 L 800,800 M 850,0 L 850,800 M 900,0 L 900,800 M 950,0 L 950,800 M 1000,0 L 1000,800 M 1050,0 L 1050,800 M 1100,0 L 1100,800 M 1150,0 L 1150,800 M 1200,0 L 1200,800 M 0,0 L 1200,0 M 0,50 L 1200,50 M 0,100 L 1200,100 M 0,150 L 1200,150 M 0,200 L 1200,200 M 0,250 L 1200,250 M 0,300 L 1200,300 M 0,350 L 1200,350 M 0,400 L 1200,400 M 0,450 L 1200,450 M 0,500 L 1200,500 M 0,550 L 1200,550 M 0,600 L 1200,600 M 0,650 L 1200,650 M 0,700 L 1200,700 M 0,750 L 1200,750 M 0,800 L 1200,800"
                                Opacity="0.15"
                                Stroke="{ThemeResource TextFillColorTertiaryBrush}"
                                StrokeThickness="0.5" />

                            <!--  Track Segments  -->
                            <ItemsControl ItemsSource="{x:Bind ViewModel.PlacedSegments, Mode=OneWay}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:TrackSegmentViewModel">
                                        <Canvas PointerPressed="Segment_PointerPressed">
                                            <!--  Track Path (Theme-aware)  -->
                                            <Path
                                                Data="{x:Bind PathData, Mode=OneWay}"
                                                Stroke="{ThemeResource TextFillColorPrimaryBrush}"
                                                StrokeEndLineCap="Round"
                                                StrokeLineJoin="Round"
                                                StrokeStartLineCap="Round"
                                                StrokeThickness="10" />

                                            <!--  Selection Highlight (Accent color glow)  -->
                                            <Path
                                                Data="{x:Bind PathData, Mode=OneWay}"
                                                Opacity="0.6"
                                                Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                                StrokeEndLineCap="Round"
                                                StrokeLineJoin="Round"
                                                StrokeStartLineCap="Round"
                                                StrokeThickness="16"
                                                Visibility="{x:Bind IsSelected, Mode=OneWay}" />

                                            <!--  Start Endpoint Circle (hidden when connected)  -->
                                            <Ellipse
                                                Canvas.Left="{x:Bind StartPointX, Mode=OneWay}"
                                                Canvas.Top="{x:Bind StartPointY, Mode=OneWay}"
                                                Width="10"
                                                Height="10"
                                                Margin="-5,-5,0,0"
                                                Fill="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                Stroke="{ThemeResource TextFillColorSecondaryBrush}"
                                                StrokeThickness="1.5"
                                                Visibility="{x:Bind ShowStartEndpoint, Mode=OneWay}" />

                                            <!--  End Endpoint Circle (hidden when connected)  -->
                                            <Ellipse
                                                Canvas.Left="{x:Bind EndPointX, Mode=OneWay}"
                                                Canvas.Top="{x:Bind EndPointY, Mode=OneWay}"
                                                Width="10"
                                                Height="10"
                                                Margin="-5,-5,0,0"
                                                Fill="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                Stroke="{ThemeResource TextFillColorSecondaryBrush}"
                                                StrokeThickness="1.5"
                                                Visibility="{x:Bind ShowEndEndpoint, Mode=OneWay}" />

                                            <!--  Triggered State (red highlight when sensor active)  -->
                                            <Path
                                                Data="{x:Bind PathData, Mode=OneWay}"
                                                Opacity="0.7"
                                                Stroke="#FF4444"
                                                StrokeEndLineCap="Round"
                                                StrokeLineJoin="Round"
                                                StrokeStartLineCap="Round"
                                                StrokeThickness="14"
                                                Visibility="{x:Bind IsTriggered, Mode=OneWay}" />


                                            <!--  InPort Label (if assigned)  -->
                                            <Border
                                                Canvas.Left="{x:Bind LabelX, Mode=OneWay}"
                                                Canvas.Top="{x:Bind InPortLabelY, Mode=OneWay}"
                                                Padding="5,2"
                                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                CornerRadius="3"
                                                Visibility="{x:Bind HasInPort, Mode=OneWay}">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="{x:Bind InPortDisplayText, Mode=OneWay}" />
                                            </Border>

                                            <!--  Article Code Label (centered on track with background)  -->
                                            <Border
                                                Canvas.Left="{x:Bind LabelX, Mode=OneWay}"
                                                Canvas.Top="{x:Bind LabelY, Mode=OneWay}"
                                                Padding="4,2"
                                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                CornerRadius="3"
                                                Opacity="0.9">
                                                <TextBlock
                                                    FontSize="10"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Text="{x:Bind ArticleCode, Mode=OneWay}" />
                                            </Border>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Canvas>
                    </ScrollViewer>

                    <!--  Zoom Controls (bottom right overlay)  -->
                    <Border
                        Margin="16"
                        Padding="8,4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button
                                Padding="6"
                                Click="ZoomOut_Click"
                                ToolTipService.ToolTip="Zoom Out">
                                <FontIcon FontSize="12" Glyph="&#xE738;" />
                            </Button>
                            <Slider
                                x:Name="ZoomSlider"
                                Width="100"
                                Maximum="400"
                                Minimum="10"
                                ToolTipService.ToolTip="Zoom Level"
                                ValueChanged="ZoomSlider_ValueChanged"
                                Value="100" />
                            <Button
                                Padding="6"
                                Click="ZoomIn_Click"
                                ToolTipService.ToolTip="Zoom In">
                                <FontIcon FontSize="12" Glyph="&#xE710;" />
                            </Button>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind ZoomLevelText, Mode=OneWay}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!--  Segment Properties Panel (Right Side)  -->
            <Border
                Grid.Column="2"
                Margin="16,0,0,0"
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Header  -->
                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Segment Properties" />

                    <!--  Properties Content  -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="16">
                            <!--  No Selection Placeholder  -->
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Text="Select a track segment to view and edit its properties"
                                TextWrapping="Wrap"
                                Visibility="{x:Bind ViewModel.HasNoSelectedSegment, Mode=OneWay}" />

                            <!--  Segment Info (visible when selected)  -->
                            <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasSelectedSegment, Mode=OneWay}">
                                <!--  Article Code  -->
                                <StackPanel Spacing="4">
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="Article Code" />
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind ViewModel.SelectedSegment.ArticleCode, Mode=OneWay}" />
                                </StackPanel>

                                <!--  Name  -->
                                <StackPanel Spacing="4">
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="Name" />
                                    <TextBlock Text="{x:Bind ViewModel.SelectedSegment.Name, Mode=OneWay}" />
                                </StackPanel>

                                <!--  Position  -->
                                <StackPanel Spacing="4">
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="Position" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="X:" />
                                        <TextBlock FontWeight="SemiBold" Text="{x:Bind ViewModel.SelectedSegment.CenterXDisplay, Mode=OneWay}" />
                                        <TextBlock Margin="8,0,0,0" Text="Y:" />
                                        <TextBlock FontWeight="SemiBold" Text="{x:Bind ViewModel.SelectedSegment.CenterYDisplay, Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>

                                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                                <!--  InPort Assignment  -->
                                <NumberBox
                                    Header="InPort"
                                    Maximum="2048"
                                    Minimum="1"
                                    PlaceholderText="1-2048"
                                    SpinButtonPlacementMode="Inline"
                                    Value="{x:Bind ViewModel.InPortInput, Mode=TwoWay}" />

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button
                                        Command="{x:Bind ViewModel.AssignInPortCommand}"
                                        Content="Assign"
                                        Style="{StaticResource AccentButtonStyle}" />
                                    <Button Command="{x:Bind ViewModel.ClearInPortCommand}" Content="Clear" />
                                </StackPanel>

                                <!--  Current Assignment Info  -->
                                <Border
                                    Padding="8"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Visibility="{x:Bind ViewModel.SelectedSegment.HasInPort, Mode=OneWay}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon
                                            FontSize="14"
                                            Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                            Glyph="&#xE701;" />
                                        <TextBlock>
                                            <Run Text="InPort" />
                                            <Run FontWeight="Bold" Text="{x:Bind ViewModel.SelectedSegment.AssignedInPort, Mode=OneWay}" />
                                            <Run Text="assigned" />
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                                <!--  Canvas Size Configuration  -->
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Work Surface" />

                                <NumberBox
                                    Header="Width (mm)"
                                    LargeChange="100"
                                    Maximum="10000"
                                    Minimum="500"
                                    SmallChange="50"
                                    SpinButtonPlacementMode="Inline"
                                    Value="{x:Bind ViewModel.CanvasWidthMm, Mode=TwoWay}" />

                                <NumberBox
                                    Header="Height (mm)"
                                    LargeChange="100"
                                    Maximum="5000"
                                    Minimum="300"
                                    SmallChange="50"
                                    SpinButtonPlacementMode="Inline"
                                    Value="{x:Bind ViewModel.CanvasHeightMm, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!--  Status Bar  -->
        <Border
            Grid.Row="1"
            Padding="24,8"
            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Segment Count  -->
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Glyph="&#xE8B3;" />
                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="{x:Bind ViewModel.PlacedSegments.Count, Mode=OneWay}" />
                            <Run Text="Segments" />
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Glyph="&#xE701;" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="{x:Bind ViewModel.SensorStatusText, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>

                <!--  Mouse Position  -->
                <TextBlock
                    Grid.Column="1"
                    Margin="16,0"
                    FontFamily="Consolas"
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Text="{x:Bind MousePositionText, Mode=OneWay}" />

                <!--  Zoom Level  -->
                <TextBlock
                    Grid.Column="2"
                    Margin="16,0"
                    FontFamily="Consolas"
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Text="{x:Bind ZoomLevelText, Mode=OneWay}" />

                <!--  Keyboard Hints  -->
                <TextBlock
                    Grid.Column="3"
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Text="Del: Delete  •  Ctrl+A: Select All  •  Esc: Deselect  •  Right-Click: Pan" />
            </Grid>
        </Border>
    </Grid>
</Page>