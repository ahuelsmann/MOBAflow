<Page
    x:Class="Moba.WinUI.View.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Navigation Panel  -->
        <Border
            Grid.Column="0"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,1,0">
            <StackPanel Padding="16" Spacing="16">
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="MOBAflow Wiki" />
                    <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Dokumentation" />
                </StackPanel>

                <TreeView
                    x:Name="NavigationTreeView"
                    ItemInvoked="OnNavigationItemInvoked"
                    SelectionMode="Single" />
            </StackPanel>
        </Border>

        <!--  Content Panel  -->
        <ScrollViewer
            Grid.Column="2"
            Padding="24"
            VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800" Spacing="16">
                <TextBlock
                    x:Name="HeaderTextBlock"
                    FontSize="32"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    Text="Willkommen" />
                <RichTextBlock
                    x:Name="ContentRichTextBlock"
                    FontSize="15"
                    IsTextSelectionEnabled="True"
                    TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
