<Page
    x:Class="Moba.WinUI.View.DockingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:docking="using:Moba.WinUI.Controls.Docking"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  DockingManager  -->
        <docking:DockingManager
            x:Name="DockManager"
            Grid.Row="1"
            BottomPanelHeight="180"
            BottomPanels="{Binding BottomPanels}"
            IsBottomPanelVisible="True"
            IsLeftPanelVisible="True"
            IsRightPanelVisible="True"
            IsTopPanelVisible="False"
            LeftPanelWidth="240"
            LeftPanels="{Binding LeftPanels}"
            RightPanelWidth="260"
            RightPanels="{Binding RightPanels}"
            TabDockedToSide="OnTabDockedToSide"
            TopPanels="{Binding TopPanels}">

            <!--  Center: Document Tabs  -->
            <docking:DockingManager.DocumentAreaContent>
                <docking:LayoutDocument
                    ActiveDocument="{Binding ActiveDocument, Mode=TwoWay}"
                    AllowFloatingTabs="False"
                    Documents="{Binding OpenDocuments}"
                    EnableTabGrouping="True">

                    <docking:LayoutDocument.TabTemplate>
                        <DataTemplate x:DataType="docking:DocumentTab">
                            <Grid Padding="4,0" ColumnSpacing="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Glyph="{Binding IconGlyph}" />

                                <TextBlock
                                    Grid.Column="1"
                                    MaxWidth="160"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis" />

                                <FontIcon
                                    Grid.Column="2"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="9"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xE718;"
                                    Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}" />

                                <TextBlock
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    FontSize="9"
                                    Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                    Text="*"
                                    Visibility="{Binding IsModified, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </docking:LayoutDocument.TabTemplate>

                    <docking:LayoutDocument.ContentTemplate>
                        <DataTemplate x:DataType="docking:DocumentTab">
                            <ScrollViewer
                                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                HorizontalScrollMode="Disabled"
                                VerticalScrollMode="Auto">
                                <ContentPresenter Margin="0" Content="{Binding Content}" />
                            </ScrollViewer>
                        </DataTemplate>
                    </docking:LayoutDocument.ContentTemplate>
                </docking:LayoutDocument>
            </docking:DockingManager.DocumentAreaContent>

            <!--  Status Bar  -->
            <docking:DockingManager.StatusBarContent>
                <Grid
                    Height="24"
                    Padding="8,0"
                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        Text="Ready" />

                    <StackPanel
                        Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="16">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            Text="Ln 42" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            Text="Col 18" />
                    </StackPanel>

                    <TextBlock
                        Grid.Column="3"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        Text="UTF-8" />

                    <TextBlock
                        Grid.Column="4"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        Text="CRLF" />
                </Grid>
            </docking:DockingManager.StatusBarContent>
        </docking:DockingManager>
    </Grid>
</Page>