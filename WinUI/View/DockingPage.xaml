<Page
    x:Class="Moba.WinUI.View.DockingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Moba.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources />

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar
            Grid.Row="0"
            Background="{ThemeResource SurfaceSecondaryBrush}"
            DefaultLabelPosition="Right">

            <AppBarButton
                Command="{Binding AddNewDocumentCommand}"
                Icon="Add"
                Label="New Document" />

            <AppBarButton
                Command="{Binding MarkAsModifiedCommand}"
                Icon="Edit"
                Label="Toggle Modified" />

            <AppBarButton
                Command="{Binding PinCurrentDocumentCommand}"
                Icon="Pin"
                Label="Toggle Pin" />

            <AppBarSeparator />

            <AppBarButton
                Command="{Binding CloseCurrentDocumentCommand}"
                Icon="Cancel"
                Label="Close" />

            <AppBarButton
                Command="{Binding CloseAllModifiedDocumentsCommand}"
                Icon="Delete"
                Label="Close Modified" />
        </CommandBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Column="0"
                Width="250"
                Background="{ThemeResource SurfaceSecondaryBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">

                <StackPanel Padding="12">
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                        Text="Tab Groups" />

                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Tabs are automatically grouped by:"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,4"
                        FontSize="11"
                        Text="● Modified - Unsaved changes" />

                    <TextBlock
                        Margin="0,4"
                        FontSize="11"
                        Text="Pinned - Important files" />

                    <TextBlock
                        Margin="0,4"
                        FontSize="11"
                        Text="Open - Regular tabs" />

                    <TextBlock
                        Margin="0,16,0,4"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                        Text="Total Documents:" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        Text="{Binding OpenDocuments.Count}" />
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <controls:LayoutDocumentEx
                    x:Name="DocumentArea"
                    ActiveDocument="{Binding ActiveDocument, Mode=TwoWay}"
                    AllowFloatingTabs="False"
                    Documents="{Binding OpenDocuments}"
                    EnableTabGrouping="True">

                    <controls:LayoutDocumentEx.TabTemplate>
                        <DataTemplate x:DataType="controls:DocumentTab">
                            <Grid Padding="8,0" ColumnSpacing="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Glyph="{Binding IconGlyph}" />

                                <TextBlock
                                    Grid.Column="1"
                                    MaxWidth="150"
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis" />

                                <TextBlock
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    FontSize="8"
                                    Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                    Text="●"
                                    Visibility="{Binding IsModified, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </controls:LayoutDocumentEx.TabTemplate>

                    <controls:LayoutDocumentEx.ContentTemplate>
                        <DataTemplate x:DataType="controls:DocumentTab">
                            <ScrollViewer
                                Background="{ThemeResource SurfaceBackgroundFillColorDefaultBrush}"
                                HorizontalScrollMode="Disabled"
                                VerticalScrollMode="Auto">
                                <ContentPresenter Margin="0" Content="{Binding Content}" />
                            </ScrollViewer>
                        </DataTemplate>
                    </controls:LayoutDocumentEx.ContentTemplate>
                </controls:LayoutDocumentEx>
            </Grid>

            <Grid
                Grid.Column="2"
                Width="250"
                Background="{ThemeResource SurfaceSecondaryBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0">

                <ScrollViewer Padding="12">
                    <StackPanel Spacing="12">
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Text="Active Document" />

                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Title:" />
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="{Binding ActiveDocument.Title}"
                                TextWrapping="Wrap" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Status:" />
                            <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorPrimaryBrush}">
                                <Run x:Uid="Modified">Modified:</Run>
                                <Run Text="{Binding ActiveDocument.IsModified}" />
                            </TextBlock>
                            <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorPrimaryBrush}">
                                <Run>Pinned:</Run>
                                <Run Text="{Binding ActiveDocument.IsPinned}" />
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Icon:" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="{Binding ActiveDocument.IconGlyph}" />
                        </StackPanel>

                        <TextBlock
                            Margin="0,12,0,0"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Text="Quick Actions" />

                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Command="{Binding MarkAsModifiedCommand}"
                            Content="Mark Modified" />

                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Command="{Binding PinCurrentDocumentCommand}"
                            Content="Pin/Unpin" />

                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Command="{Binding CloseCurrentDocumentCommand}"
                            Content="Close" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>

