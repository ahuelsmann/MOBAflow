<Application
    x:Class="Moba.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:Moba.WinUI.Converter">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  WinUI 3 Controls Resources - required for theme resources and control styles  -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Resources/SignalBoxColors.xaml" />
                <ResourceDictionary Source="/Resources/EntityTemplates.xaml" />
                <ResourceDictionary Source="/Resources/ControlStyles.xaml" />
                <ResourceDictionary Source="/Resources/TrackGraphics.xaml" />
                <ResourceDictionary Source="/Resources/SignalGraphics.xaml" />
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="SurfaceSecondaryBrush" Color="#FFF3F3F3" />
                    <SolidColorBrush x:Key="SurfaceBackgroundFillColorDefaultBrush" Color="#FFFFFFFF" />
                    <!--  TrackPlan: kräftig dunkler Strich auf hellem Hintergrund (Fluent: guter Kontrast)  -->
                    <SolidColorBrush x:Key="TrackPlanStrokeBrush" Color="#FF121212" />
                    <SolidColorBrush x:Key="TrackPlanStrokeSelectedBrush" Color="#FF0078D4" />
                    <!--  Icons (Icons.xaml): schwarz im Light-Theme  -->
                    <SolidColorBrush x:Key="IconStrokeBrush" Color="#FF000000" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="SurfaceSecondaryBrush" Color="#FF1F1F1F" />
                    <SolidColorBrush x:Key="SurfaceBackgroundFillColorDefaultBrush" Color="#FF202020" />
                    <!--  TrackPlan: heller Strich auf dunklem Hintergrund (Fluent: Lesbarkeit im Dark Mode)  -->
                    <SolidColorBrush x:Key="TrackPlanStrokeBrush" Color="#FFEBEBEB" />
                    <SolidColorBrush x:Key="TrackPlanStrokeSelectedBrush" Color="#FF60CDFF" />
                    <!--  Icons (Icons.xaml): weiß im Dark-Theme  -->
                    <SolidColorBrush x:Key="IconStrokeBrush" Color="#FFFFFFFF" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!--  TextBlock Styles (Fluent Design 2 Typography)  -->
            <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
            </Style>

            <Style x:Key="SubtitleTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
            </Style>

            <Style x:Key="CaptionTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            </Style>

            <!--  Skin Swatches (used by skin selector flyouts)  -->
            <SolidColorBrush x:Key="SkinBlueBrush" Color="#0078D4" />
            <SolidColorBrush x:Key="SkinGreenBrush" Color="#2ECC71" />
            <SolidColorBrush x:Key="SkinOrangeBrush" Color="#FF6600" />
            <SolidColorBrush x:Key="SkinRedBrush" Color="#CC0000" />

            <!--  TrackPlan Section Colors (used by section editor in TrackPlanPage)  -->
            <SolidColorBrush x:Key="TrackPlanSectionColor1" Color="#FF5733" />
            <SolidColorBrush x:Key="TrackPlanSectionColor2" Color="#33FF57" />
            <SolidColorBrush x:Key="TrackPlanSectionColor3" Color="#3357FF" />
            <SolidColorBrush x:Key="TrackPlanSectionColor4" Color="#FFFF33" />
            <SolidColorBrush x:Key="TrackPlanSectionColor5" Color="#FF33FF" />
            <SolidColorBrush x:Key="TrackPlanSectionColor6" Color="#33FFFF" />
            <SolidColorBrush x:Key="TrackPlanSectionColor7" Color="#FF9933" />
            <SolidColorBrush x:Key="TrackPlanSectionColor8" Color="#9933FF" />

            <!--  Global Converters  -->
            <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converter:NullableConverter x:Key="NullableConverter" />
            <converter:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converter:HexColorToBrushConverter x:Key="HexColorToBrushConverter" />
            <converter:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
            <converter:BoolToAccentBrushConverter x:Key="BoolToAccentBrushConverter" />
            <converter:TrackNumberConverter x:Key="TrackNumberConverter" />
            <converter:BoolToStringConverter
                x:Key="ExitSideConverter"
                FalseValue="Exit Right"
                TrueValue="Exit Left" />
            <converter:NullableUIntConverter x:Key="NullableUIntConverter" />
            <converter:DateTimeToTimeSpanConverter x:Key="DateTimeToTimeSpanConverter" />
            <converter:DateTimeOffsetConverter x:Key="DateTimeOffsetConverter" />
            <converter:PhotoPathToImageConverter x:Key="PhotoPathToImageConverter" />
            <converter:BoolToStringConverter
                x:Key="PinTooltipConverter"
                FalseValue="Pin panel"
                TrueValue="Unpin panel" />
            <converter:DateTimeToShortTimeConverter x:Key="DateTimeToShortTimeConverter" />
            <converter:TimeSpanToDurationConverter x:Key="TimeSpanToDurationConverter" />
            <converter:BoolToStringConverter
                x:Key="BoolToTripLogIconConverter"
                FalseValue="&#xE768;"
                TrueValue="&#xE769;" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
