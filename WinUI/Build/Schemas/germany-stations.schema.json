{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MOBAflow Stations Library Schema",
  "description": "JSON Schema for germany-stations.json - defines available railway stations in Germany",
  "type": "object",
  "required": ["Cities"],
  "properties": {
    "Cities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["Name", "Stations"],
        "properties": {
          "Name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "City name"
          },
          "Stations": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["Name", "Number", "Track"],
              "properties": {
                "Name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 200,
                  "description": "Station name"
                },
                "Number": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Station number/ID"
                },
                "NumberOfLapsToStop": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of laps before stopping"
                },
                "Arrival": {
                  "type": ["string", "null"],
                  "format": "time",
                  "description": "Expected arrival time (HH:mm:ss format)"
                },
                "Departure": {
                  "type": ["string", "null"],
                  "format": "time",
                  "description": "Expected departure time (HH:mm:ss format)"
                },
                "Track": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 50,
                  "description": "Track number"
                },
                "IsExitOnLeft": {
                  "type": "boolean",
                  "description": "Whether exit/turnout is on left side"
                },
                "Flow": {
                  "type": ["string", "null"],
                  "description": "Traffic flow direction"
                },
                "Platforms": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  },
                  "description": "Platform information"
                }
              }
            }
          }
        }
      }
    }
  }
}
