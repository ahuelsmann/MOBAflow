{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MOBAflow Appsettings Schema",
    "description": "JSON Schema f√ºr die WinUI-Konfiguration (appsettings.json)",
    "type": "object",
    "properties": {
        "Logging": {
            "type": "object",
            "properties": {
                "LogLevel": {
                    "type": "object",
                    "properties": {
                        "Default": { "type": "string" },
                        "Microsoft": { "type": "string" },
                        "Moba": { "type": "string" }
                    }
                }
            }
        },
        "Z21": {
            "type": "object",
            "properties": {
                "CurrentIpAddress": { "type": "string" },
                "DefaultPort": { "type": [ "integer", "string" ] },
                "AutoConnectRetryIntervalSeconds": { "type": "integer" },
                "RecentIpAddresses": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        },
        "RestApi": {
            "type": "object",
            "properties": {
                "CurrentIpAddress": { "type": "string" },
                "Port": { "type": [ "integer", "string" ] },
                "RecentIpAddresses": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        },
        "Speech": {
            "type": "object",
            "properties": {
                "Key": { "type": "string" },
                "Region": { "type": "string" },
                "Rate": { "type": "number" },
                "Volume": { "type": "number" },
                "SpeakerEngineName": { "type": "string" },
                "VoiceName": { "type": "string" },
                "TestMessage": { "type": "string" }
            }
        },
        "Application": {
            "type": "object",
            "properties": {
                "ResetWindowLayoutOnStart": { "type": "boolean" },
                "AutoLoadLastSolution": { "type": "boolean" },
                "AutoStartWebApp": { "type": "boolean" },
                "LastSolutionPath": { "type": [ "string", "null" ] }
            }
        },
        "Counter": {
            "type": "object",
            "properties": {
                "CountOfFeedbackPoints": { "type": "integer" },
                "TargetLapCount": { "type": "integer" },
                "UseTimerFilter": { "type": "boolean" },
                "TimerIntervalSeconds": { "type": "integer" }
            }
        },
        "HealthCheck": {
            "type": "object",
            "properties": {
                "Enabled": { "type": "boolean" },
                "IntervalSeconds": { "type": "integer" }
            }
        },
        "FeatureToggles": {
            "type": "object",
            "additionalProperties": { "type": [ "string", "boolean", "number" ] }
        }
    },
    "additionalProperties": true
}
