<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="Moba.Smart.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Moba.Smart">
  <Application.Resources>
    <ResourceDictionary>
      
      <!-- ⚠️ CRITICAL: Define essential colors INLINE to ensure they're available at startup -->
      <Color x:Key="SurfaceBackground">#121212</Color>
      <Color x:Key="SurfaceCard">#2D2D30</Color>
      <Color x:Key="SurfaceElevated">#383838</Color>
      <Color x:Key="SurfaceHighlight">#404040</Color>
      <Color x:Key="SurfaceDark">#1E1E1E</Color>
      
      <Color x:Key="RailwayPrimary">#1976D2</Color>
      <Color x:Key="RailwaySecondary">#FF6F00</Color>
      <Color x:Key="RailwayAccent">#00C853</Color>
      <Color x:Key="RailwayDanger">#D32F2F</Color>
      
      <Color x:Key="TextPrimary">#FFFFFF</Color>
      <Color x:Key="TextSecondary">#B0B0B0</Color>
      <Color x:Key="TextDisabled">#707070</Color>
      <Color x:Key="TextOnPrimary">#FFFFFF</Color>
      <Color x:Key="BorderColor">#4D4D4D</Color>
      
      <!-- Legacy compatibility -->
      <Color x:Key="PageBackgroundColor">#121212</Color>
      <Color x:Key="FrameBackgroundColor">#2D2D30</Color>
      <Color x:Key="Primary">#1976D2</Color>
      <Color x:Key="White">White</Color>
      <Color x:Key="Gray200">#C8C8C8</Color>
      <Color x:Key="Gray300">#ACACAC</Color>
      <Color x:Key="Gray400">#919191</Color>
      <Color x:Key="Gray600">#404040</Color>
      
      <ResourceDictionary.MergedDictionaries>
        <!--  Load external dictionaries AFTER inline definitions  -->
        <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles/DarkTheme.xaml" />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>