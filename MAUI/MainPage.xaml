<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moba.Smart.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MOBAsmart - Monitor">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!--  Connection Section  -->
            <Frame
                Padding="15"
                BackgroundColor="#2c3e50"
                CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Z21 Connection"
                        TextColor="White" />
                    <HorizontalStackLayout Spacing="10">
                        <Entry
                            x:Name="IpAddressEntry"
                            HorizontalOptions="FillAndExpand"
                            Placeholder="192.168.0.111"
                            PlaceholderColor="LightGray"
                            Text="{Binding Z21IpAddress}"
                            TextColor="White" />
                        <ImageButton
                            Padding="12"
                            BackgroundColor="#27ae60"
                            Command="{Binding ConnectCommand}"
                            CornerRadius="5"
                            HeightRequest="50"
                            Source="icon_connect.png"
                            WidthRequest="60" />
                        <ImageButton
                            Padding="12"
                            BackgroundColor="#e74c3c"
                            Command="{Binding DisconnectCommand}"
                            CornerRadius="5"
                            HeightRequest="50"
                            Source="icon_disconnect.png"
                            WidthRequest="60" />
                    </HorizontalStackLayout>

                    <Label
                        FontSize="14"
                        Text="{Binding StatusText}"
                        TextColor="White" />
                </VerticalStackLayout>
            </Frame>
            <!--  Timer Filter Section (Collapsible)  -->
            <Frame
                Padding="15"
                BackgroundColor="#34495e"
                CornerRadius="8">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="âš™ï¸ Timer Filter"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <VerticalStackLayout Padding="0,10,0,0" Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="Enable Filter"
                                    TextColor="White"
                                    VerticalOptions="Center" />
                                <Switch
                                    IsToggled="{Binding UseTimerFilter}"
                                    OnColor="#27ae60"
                                    ThumbColor="White" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout IsVisible="{Binding UseTimerFilter}" Spacing="5">
                                <HorizontalStackLayout Spacing="10">
                                    <Label
                                        Text="Interval (seconds):"
                                        TextColor="White"
                                        VerticalOptions="Center" />
                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding TimerIntervalSeconds, StringFormat='{0:F1}s'}"
                                        TextColor="#3498db"
                                        VerticalOptions="Center" />
                                </HorizontalStackLayout>
                                <Slider
                                    Maximum="10"
                                    MaximumTrackColor="Gray"
                                    Minimum="1"
                                    MinimumTrackColor="#3498db"
                                    ThumbColor="White"
                                    Value="{Binding TimerIntervalSeconds}" />
                                <Label
                                    FontSize="12"
                                    LineBreakMode="WordWrap"
                                    Text="Prevents multiple counts from the same train pass (e.g., 16-axle train)"
                                    TextColor="LightGray" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>
            <!--  Target Laps Section (Collapsible)  -->
            <Frame
                Padding="15"
                BackgroundColor="#34495e"
                CornerRadius="8">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="ðŸŽ¯ Target Laps"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <VerticalStackLayout Padding="0,10,0,0" Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Entry
                                    x:Name="TargetEntry"
                                    HorizontalOptions="FillAndExpand"
                                    Keyboard="Numeric"
                                    Placeholder="10"
                                    PlaceholderColor="LightGray"
                                    Text="{Binding GlobalTargetLapCount}"
                                    TextColor="White" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>
            <!--  Statistics Section with Material Design Colors  -->
            <Frame
                Padding="15"
                BackgroundColor="#2c3e50"
                CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="ðŸ“Š Lap Statistics"
                        TextColor="White" />
                    <CollectionView ItemsSource="{Binding Statistics}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <!--  Material Design Red 400 â†’ Green 400 after first lap  -->
                                <Frame
                                    Margin="0,5"
                                    Padding="10"
                                    BackgroundColor="{Binding BackgroundColorName}"
                                    BorderColor="White"
                                    CornerRadius="5"
                                    HasShadow="True">
                                    <VerticalStackLayout Spacing="5">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            Text="{Binding InPort, StringFormat='Track {0}'}"
                                            TextColor="White" />
                                        <Label
                                            FontSize="14"
                                            Text="{Binding LapCountFormatted}"
                                            TextColor="White" />
                                        <Label
                                            FontSize="12"
                                            Text="{Binding LastLapTimeFormatted, StringFormat='â±ï¸ Last lap: {0}'}"
                                            TextColor="White" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
            <!--  Z21 System State Section (Collapsible)  -->
            <Frame
                Padding="15"
                BackgroundColor="#34495e"
                CornerRadius="8">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="âš¡ Z21 System State"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </toolkit:Expander.Header>

                    <toolkit:Expander.Content>
                        <VerticalStackLayout Padding="0,10,0,0" Spacing="10">
                            <!--  Main Current  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="Main Current:"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    WidthRequest="150" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="{Binding MainCurrent, StringFormat='{0} mA'}"
                                    TextColor="#3498db"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!--  Temperature  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="Temperature:"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    WidthRequest="150" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="{Binding Temperature, StringFormat='{0} Â°C'}"
                                    TextColor="#3498db"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!--  Supply Voltage  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="Supply Voltage:"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    WidthRequest="150" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="{Binding SupplyVoltage, StringFormat='{0} mV'}"
                                    TextColor="#3498db"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!--  VCC Voltage  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="VCC Voltage:"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    WidthRequest="150" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="{Binding VccVoltage, StringFormat='{0} mV'}"
                                    TextColor="#3498db"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!--  Central State  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="State:"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    WidthRequest="150" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="{Binding CentralState}"
                                    TextColor="#3498db"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!--  Central State Ex  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    Text="StateEx:"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    WidthRequest="150" />
                                <Label
                                    FontAttributes="Bold"
                                    Text="{Binding CentralStateEx}"
                                    TextColor="#3498db"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>
            <!--  Control Buttons  -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    BackgroundColor="#e74c3c"
                    Command="{Binding ResetCountersCommand}"
                    Text="Reset"
                    TextColor="White"
                    WidthRequest="120" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>