<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moba.MAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Moba.SharedUI.ViewModel;assembly=SharedUI"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MOBAsmart"
    x:DataType="local:MauiViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="0"
            HorizontalOptions="Fill"
            Spacing="1">
            <!--  Header with Status Indicator and Theme Switch  -->
            <Grid Padding="16,6,16,12" ColumnDefinitions="Auto,Auto,Auto,*,Auto">
                <!--  App Title  -->
                <Label
                    Grid.Column="0"
                    FontAttributes="Bold"
                    FontSize="22"
                    Text="MOBAsmart"
                    TextColor="{DynamicResource RailwayPrimary}"
                    VerticalOptions="Center" />

                <!--  App Logo (Train Icon)  -->
                <Image
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    HeightRequest="28"
                    Source="logo_train.png"
                    VerticalOptions="Center"
                    WidthRequest="28" />

                <!--  Theme Switch  -->
                <HorizontalStackLayout
                    Grid.Column="2"
                    Margin="8,0,0,0"
                    Spacing="0"
                    VerticalOptions="Center">
                    <Label
                        x:Name="ThemeIcon"
                        FontSize="14"
                        Text="🌙"
                        VerticalOptions="Center" />
                    <Switch
                        x:Name="ThemeSwitch"
                        OnColor="{DynamicResource RailwayPrimary}"
                        Scale="0.75"
                        ThumbColor="White"
                        Toggled="ThemeSwitch_Toggled" />
                </HorizontalStackLayout>

                <!--  Spacer  -->
                <BoxView Grid.Column="3" Color="Transparent" />

                <!--  Connection Status Indicator (with pulse animation when connected)  -->
                <Border
                    x:Name="ConnectionIndicator"
                    Grid.Column="4"
                    BackgroundColor="{Binding IsConnected, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayDanger}}}"
                    HeightRequest="14"
                    StrokeShape="RoundRectangle 7"
                    StrokeThickness="0"
                    VerticalOptions="Center"
                    WidthRequest="14">
                    <Border.Shadow>
                        <Shadow
                            Brush="{Binding IsConnected, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayDanger}}}"
                            Opacity="0.6"
                            Radius="8" />
                    </Border.Shadow>
                </Border>
            </Grid>


            <!--  Connection Controls Card  -->
            <VerticalStackLayout Padding="16,6" Spacing="8">
                <!--  REST-API Server Section  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="12"
                    Text="MOBAflow Service"
                    TextColor="{DynamicResource TextSecondary}" />

                <!--  Inline Help Label (only when IP is empty)  -->
                <Label
                    FontSize="10"
                    IsVisible="{Binding RestApiIpAddress, Converter={toolkit:IsStringNullOrEmptyConverter}}"
                    Text="💡 Enter your PC's local IP (e.g., 192.168.0.79)"
                    TextColor="{DynamicResource RailwaySecondary}" />

                <!--  IP Address and Port in styled containers  -->
                <Grid ColumnDefinitions="*,80" ColumnSpacing="8">
                    <Border
                        Grid.Column="0"
                        Padding="12,0"
                        BackgroundColor="{DynamicResource SurfaceDark}"
                        StrokeShape="RoundRectangle 6"
                        StrokeThickness="0">
                        <Entry
                            BackgroundColor="Transparent"
                            FontSize="14"
                            Placeholder="192.168.0.100"
                            PlaceholderColor="{DynamicResource TextDisabled}"
                            Text="{Binding RestApiIpAddress}"
                            TextColor="{DynamicResource TextPrimary}"
                            VerticalOptions="Center" />
                    </Border>
                    <Border
                        Grid.Column="1"
                        Padding="12,0"
                        BackgroundColor="{DynamicResource SurfaceDark}"
                        StrokeShape="RoundRectangle 6"
                        StrokeThickness="0">
                        <Entry
                            BackgroundColor="Transparent"
                            FontSize="14"
                            HorizontalTextAlignment="Center"
                            Keyboard="Numeric"
                            Placeholder="5001"
                            PlaceholderColor="{DynamicResource TextDisabled}"
                            Text="{Binding RestApiPort}"
                            TextColor="{DynamicResource TextPrimary}"
                            VerticalOptions="Center" />
                    </Border>
                </Grid>

                <!--  Z21 IP Address Section  -->
                <Label
                    Margin="0,4,0,0"
                    FontAttributes="Bold"
                    FontSize="12"
                    Text="Z21 Digital Command Station"
                    TextColor="{DynamicResource TextSecondary}" />
                <Border
                    Padding="12,0"
                    BackgroundColor="{DynamicResource SurfaceDark}"
                    StrokeShape="RoundRectangle 6"
                    StrokeThickness="0">
                    <Entry
                        BackgroundColor="Transparent"
                        FontSize="14"
                        Placeholder="192.168.0.111"
                        PlaceholderColor="{DynamicResource TextDisabled}"
                        Text="{Binding Z21IpAddress}"
                        TextColor="{DynamicResource TextPrimary}"
                        VerticalOptions="Center" />
                </Border>

                <!--  Connection & Track Power Toggles  -->
                <Grid ColumnDefinitions="*,*">
                    <!--  Connection Toggle  -->
                    <HorizontalStackLayout
                        Grid.Column="0"
                        HorizontalOptions="Start"
                        Spacing="0"
                        VerticalOptions="Center">
                        <Label
                            FontSize="11"
                            Text="{Binding IsConnected, Converter={toolkit:BoolToObjectConverter TrueObject='Connected', FalseObject='Disconnected'}}"
                            TextColor="{DynamicResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Switch
                            IsToggled="{Binding IsConnected, Mode=OneWay}"
                            OnColor="{DynamicResource RailwayAccent}"
                            Scale="0.75"
                            ThumbColor="White"
                            Toggled="ConnectionSwitch_Toggled" />
                    </HorizontalStackLayout>

                    <!--  Track Power Toggle  -->
                    <HorizontalStackLayout
                        Grid.Column="1"
                        HorizontalOptions="End"
                        Spacing="0"
                        VerticalOptions="Center">
                        <Label
                            FontSize="11"
                            Text="Track Power"
                            TextColor="{DynamicResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Switch
                            IsEnabled="{Binding IsConnected}"
                            IsToggled="{Binding IsTrackPowerOn, Mode=OneWay}"
                            OnColor="{DynamicResource RailwayWarning}"
                            Scale="0.75"
                            ThumbColor="White"
                            Toggled="TrackPowerSwitch_Toggled" />
                    </HorizontalStackLayout>
                </Grid>
            </VerticalStackLayout>

            <!--  System Stats Card (when connected)  -->
            <VerticalStackLayout
                Padding="16,6"
                IsVisible="{Binding IsConnected}"
                Spacing="6">
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                    <!--  Temperature  -->
                    <Border
                        Grid.Column="0"
                        Padding="8,6"
                        BackgroundColor="{DynamicResource SurfaceDark}"
                        StrokeShape="RoundRectangle 6"
                        StrokeThickness="0">
                        <Border.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.15"
                                Radius="4"
                                Offset="0,2" />
                        </Border.Shadow>
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                            <Label
                                FontSize="14"
                                Text="🌡️"
                                VerticalOptions="Center" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="13"
                                Text="{Binding Temperature, StringFormat='{0}°C'}"
                                TextColor="{DynamicResource TextPrimary}"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                    <!--  Supply Voltage  -->
                    <Border
                        Grid.Column="1"
                        Padding="8,6"
                        BackgroundColor="{DynamicResource SurfaceDark}"
                        StrokeShape="RoundRectangle 6"
                        StrokeThickness="0">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                            <Label
                                FontSize="14"
                                Text="🔌"
                                VerticalOptions="Center" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="13"
                                Text="{Binding SupplyVoltage, StringFormat='{0}mV'}"
                                TextColor="{DynamicResource TextPrimary}"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                    <!--  VCC Voltage  -->
                    <Border
                        Grid.Column="2"
                        Padding="8,6"
                        BackgroundColor="{DynamicResource SurfaceDark}"
                        StrokeShape="RoundRectangle 6"
                        StrokeThickness="0">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                            <Label
                                FontSize="14"
                                Text="⚡"
                                VerticalOptions="Center" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="13"
                                Text="{Binding VccVoltage, StringFormat='{0}mV'}"
                                TextColor="{DynamicResource TextPrimary}"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!--  Counter Settings Card (Compact & Aligned)  -->
            <VerticalStackLayout Padding="16,6" Spacing="8">
                <!--  Section Header  -->
                <Grid ColumnDefinitions="*,*">
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="12"
                        Text="Feedback Points"
                        TextColor="{DynamicResource TextSecondary}" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="12"
                        HorizontalTextAlignment="End"
                        Text="Lap Counter"
                        TextColor="{DynamicResource TextSecondary}" />
                </Grid>

                <!--  Feedback Points & Target Laps (Full-Width Aligned)  -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <!--  Feedback Points Stepper  -->
                    <Grid Grid.Column="0" ColumnDefinitions="36,*,36" ColumnSpacing="4">
                        <Button
                            Grid.Column="0"
                            Padding="0"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            Command="{Binding DecrementFeedbackPointsCommand}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="36"
                            Text="−"
                            TextColor="{DynamicResource TextPrimary}"
                            WidthRequest="36" />
                        <Border
                            Grid.Column="1"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="{Binding CountOfFeedbackPoints}"
                                TextColor="{DynamicResource TextPrimary}"
                                VerticalOptions="Center" />
                        </Border>
                        <Button
                            Grid.Column="2"
                            Padding="0"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            Command="{Binding IncrementFeedbackPointsCommand}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="36"
                            Text="+"
                            TextColor="{DynamicResource TextPrimary}"
                            WidthRequest="36" />
                    </Grid>
                    <!--  Target Lap Count Stepper  -->
                    <Grid Grid.Column="1" ColumnDefinitions="36,*,36" ColumnSpacing="4">
                        <Button
                            Grid.Column="0"
                            Padding="0"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            Command="{Binding DecrementTargetLapCountCommand}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="36"
                            Text="−"
                            TextColor="{DynamicResource TextPrimary}"
                            WidthRequest="36" />
                        <Border
                            Grid.Column="1"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="{Binding GlobalTargetLapCount}"
                                TextColor="{DynamicResource TextPrimary}"
                                VerticalOptions="Center" />
                        </Border>
                        <Button
                            Grid.Column="2"
                            Padding="0"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            Command="{Binding IncrementTargetLapCountCommand}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="36"
                            Text="+"
                            TextColor="{DynamicResource TextPrimary}"
                            WidthRequest="36" />
                    </Grid>
                </Grid>

                <!--  Timer Filter Row (Aligned)  -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <HorizontalStackLayout
                        Grid.Column="0"
                        HorizontalOptions="Start"
                        Spacing="4"
                        VerticalOptions="Center">
                        <CheckBox
                            IsChecked="{Binding UseTimerFilter}"
                            Scale="0.9"
                            VerticalOptions="Center" />
                        <Label
                            FontSize="12"
                            Text="Timer Filter"
                            TextColor="{DynamicResource TextSecondary}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Grid Grid.Column="1" ColumnDefinitions="36,*,36" ColumnSpacing="4">
                        <Button
                            Grid.Column="0"
                            Padding="0"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            Command="{Binding DecrementTimerIntervalCommand}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="36"
                            IsEnabled="{Binding UseTimerFilter}"
                            Text="−"
                            TextColor="{DynamicResource TextPrimary}"
                            WidthRequest="36" />
                        <Border
                            Grid.Column="1"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                HorizontalOptions="Center"
                                Text="{Binding TimerIntervalSeconds, StringFormat='{0:F1}s'}"
                                TextColor="{DynamicResource TextPrimary}"
                                VerticalOptions="Center" />
                        </Border>
                        <Button
                            Grid.Column="2"
                            Padding="0"
                            BackgroundColor="{DynamicResource SurfaceDark}"
                            Command="{Binding IncrementTimerIntervalCommand}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="36"
                            IsEnabled="{Binding UseTimerFilter}"
                            Text="+"
                            TextColor="{DynamicResource TextPrimary}"
                            WidthRequest="36" />
                    </Grid>
                </Grid>
            </VerticalStackLayout>

            <!--  Lap Counters Card  -->
            <VerticalStackLayout Padding="16,6" Spacing="6">
                <!--  Section Header with Reset Button  -->
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="Laps"
                        VerticalOptions="Center" />
                    <Button
                        Grid.Column="2"
                        Padding="12,4"
                        BackgroundColor="{DynamicResource RailwayPrimary}"
                        Command="{Binding ResetCountersCommand}"
                        CornerRadius="6"
                        FontSize="11"
                        HeightRequest="28"
                        Text="↻ Reset"
                        TextColor="White"
                        VerticalOptions="Center" />
                </Grid>

                <!--  Counters List  -->
                <CollectionView ItemsSource="{Binding Statistics}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:InPortStatistic">
                            <Border
                                Margin="0,0,0,4"
                                Padding="12,8"
                                BackgroundColor="{DynamicResource SurfaceDark}"
                                StrokeShape="RoundRectangle 8"
                                StrokeThickness="0">
                                <Border.Shadow>
                                    <Shadow
                                        Brush="Black"
                                        Opacity="0.12"
                                        Radius="4"
                                        Offset="0,1" />
                                </Border.Shadow>
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                    <!--  Counter Badge  -->
                                    <Border
                                        Grid.Column="0"
                                        BackgroundColor="{Binding HasReceivedFirstLap, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayPrimary}}}"
                                        HeightRequest="32"
                                        StrokeShape="RoundRectangle 8"
                                        StrokeThickness="0"
                                        VerticalOptions="Center"
                                        WidthRequest="32">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            HorizontalOptions="Center"
                                            Text="{Binding Count}"
                                            TextColor="White"
                                            VerticalOptions="Center" />
                                    </Border>

                                    <!--  Content Grid  -->
                                    <Grid
                                        Grid.Column="1"
                                        RowDefinitions="Auto,Auto"
                                        RowSpacing="2">
                                        <!--  Track Name and Times  -->
                                        <Grid
                                            Grid.Row="0"
                                            ColumnDefinitions="Auto,*"
                                            ColumnSpacing="8">
                                            <!--  Track Name  -->
                                            <Label
                                                Grid.Column="0"
                                                FontAttributes="Bold"
                                                FontSize="13"
                                                Text="{Binding InPort, StringFormat='Track {0}'}"
                                                VerticalOptions="Center" />
                                            <!--  Times on right  -->
                                            <HorizontalStackLayout
                                                Grid.Column="1"
                                                HorizontalOptions="End"
                                                Spacing="6"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontSize="10"
                                                    Text="Lap:"
                                                    TextColor="{DynamicResource TextDisabled}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="10"
                                                    Text="{Binding LastLapTimeFormatted}"
                                                    TextColor="{DynamicResource RailwaySecondary}" />
                                                <Label
                                                    FontSize="10"
                                                    Text="@"
                                                    TextColor="{DynamicResource TextDisabled}" />
                                                <Label
                                                    FontSize="10"
                                                    Text="{Binding LastFeedbackTimeFormatted}"
                                                    TextColor="{DynamicResource TextDisabled}" />
                                            </HorizontalStackLayout>
                                        </Grid>

                                        <!--  Lap Count and Progress  -->
                                        <Grid
                                            Grid.Row="1"
                                            ColumnDefinitions="Auto,*,Auto,Auto"
                                            ColumnSpacing="6">
                                            <!--  Lap Count  -->
                                            <Label
                                                Grid.Column="0"
                                                FontSize="10"
                                                Text="{Binding LapCountFormatted}"
                                                TextColor="{DynamicResource TextSecondary}"
                                                VerticalOptions="Center" />
                                            <!--  Spacer  -->
                                            <BoxView Grid.Column="1" Color="Transparent" />
                                            <!--  Progress Bar  -->
                                            <ProgressBar
                                                Grid.Column="2"
                                                HeightRequest="4"
                                                Progress="{Binding Progress}"
                                                ProgressColor="{DynamicResource RailwayAccent}"
                                                VerticalOptions="Center"
                                                WidthRequest="50" />
                                            <!--  Progress Percentage  -->
                                            <Label
                                                Grid.Column="3"
                                                FontSize="10"
                                                HorizontalTextAlignment="End"
                                                Text="{Binding Progress, StringFormat='{0:P0}'}"
                                                TextColor="{DynamicResource TextSecondary}"
                                                VerticalOptions="Center"
                                                WidthRequest="35" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!--  Photo Capture & Upload Card  -->
            <VerticalStackLayout Padding="16,6">
                <Button
                    Command="{Binding CaptureAndUploadPhotoCommand}"
                    HeightRequest="44"
                    IsEnabled="{Binding IsPhotoUploading, Converter={toolkit:BoolToObjectConverter TrueObject=False, FalseObject=True}}"
                    Style="{DynamicResource AccentButtonStyle}"
                    Text="Take Photo &amp; Upload" />
                <Grid
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="8"
                    VerticalOptions="Center">
                    <ActivityIndicator
                        Grid.Column="0"
                        IsRunning="{Binding IsPhotoUploading}"
                        IsVisible="{Binding IsPhotoUploading}" />
                    <Label
                        Grid.Column="1"
                        FontSize="12"
                        Text="{Binding PhotoUploadStatus}"
                        TextColor="{Binding PhotoUploadSuccess, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayDanger}}}"
                        TextType="Text"
                        VerticalOptions="Center" />
                </Grid>
            </VerticalStackLayout>

            <!--  Footer  -->
            <Label
                FontSize="10"
                HorizontalOptions="Center"
                Text="© 2026 Andreas Huelsmann"
                TextColor="{DynamicResource TextDisabled}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
