<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moba.MAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Moba.SharedUI.ViewModel;assembly=SharedUI"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MOBAsmart"
    x:DataType="local:MauiViewModel"
    BackgroundColor="{DynamicResource SurfaceBackground}">

    <ScrollView>
        <VerticalStackLayout
            Padding="0"
            HorizontalOptions="Fill"
            Spacing="1">

            <!--  Header with Status Indicator  -->
            <Grid
                Padding="16,12,16,12"
                BackgroundColor="{DynamicResource SurfaceBackground}"
                ColumnDefinitions="*,Auto">
                <VerticalStackLayout
                    Grid.Column="0"
                    Spacing="0"
                    VerticalOptions="Center">
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        Text="MOBAsmart"
                        TextColor="{DynamicResource RailwayPrimary}" />
                </VerticalStackLayout>
                <!--  Connection Status Indicator  -->
                <Border
                    Grid.Column="1"
                    BackgroundColor="{Binding IsConnected, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayDanger}}}"
                    HeightRequest="14"
                    StrokeShape="RoundRectangle 7"
                    StrokeThickness="0"
                    VerticalOptions="Center"
                    WidthRequest="14">
                    <Border.Shadow>
                        <Shadow
                            Brush="{Binding IsConnected, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayDanger}}}"
                            Opacity="0.6"
                            Radius="8" />
                    </Border.Shadow>
                </Border>
            </Grid>

            <!--  Connection Controls Card  -->
            <Border
                Padding="16,12"
                BackgroundColor="{DynamicResource SurfaceCard}"
                Stroke="Transparent"
                StrokeThickness="0">
                <VerticalStackLayout Spacing="6">
                    <!--  REST-API Server IP:Port Entry  -->
                    <Label
                        FontSize="11"
                        Text="REST-API Server (WinUI/WebApp)"
                        TextColor="{DynamicResource TextSecondary}" />

                    <!--  Inline Help Label (only when IP is empty)  -->
                    <Label
                        FontSize="10"
                        IsVisible="{Binding RestApiIpAddress, Converter={toolkit:IsStringNullOrEmptyConverter}}"
                        Text="ðŸ’¡ Enter your PC's local IP (e.g., 192.168.0.79)"
                        TextColor="{DynamicResource RailwaySecondary}" />

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="4">
                        <Border
                            Grid.Column="0"
                            Padding="10,6"
                            BackgroundColor="{DynamicResource SurfaceHighlight}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <Entry
                                FontSize="13"
                                Placeholder="192.168.0.100"
                                Text="{Binding RestApiIpAddress}"
                                VerticalOptions="Center" />
                        </Border>
                        <Border
                            Grid.Column="1"
                            Padding="10,6"
                            BackgroundColor="{DynamicResource SurfaceHighlight}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0"
                            WidthRequest="80">
                            <Entry
                                FontSize="13"
                                Keyboard="Numeric"
                                Placeholder="5001"
                                Text="{Binding RestApiPort}"
                                VerticalOptions="Center" />
                        </Border>
                    </Grid>

                    <!--  Z21 IP Address Entry  -->
                    <Label
                        Margin="0,8,0,0"
                        FontSize="11"
                        Text="Z21 Digital Command Station"
                        TextColor="{DynamicResource TextSecondary}" />
                    <Border
                        Padding="10,6"
                        BackgroundColor="{DynamicResource SurfaceHighlight}"
                        StrokeShape="RoundRectangle 6"
                        StrokeThickness="0">
                        <Entry
                            FontSize="13"
                            Placeholder="192.168.0.111"
                            Text="{Binding Z21IpAddress}"
                            VerticalOptions="Center" />
                    </Border>

                    <!--  Connection & Track Power Toggles  -->
                    <Grid ColumnDefinitions="*,*">
                        <!--  Connection Toggle  -->
                        <Border
                            Grid.Column="0"
                            HorizontalOptions="Center"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <Grid ColumnDefinitions="Auto,Auto">
                                <Label
                                    Grid.Column="0"
                                    FontSize="11"
                                    Text="{Binding IsConnected, Converter={toolkit:BoolToObjectConverter TrueObject='Connected', FalseObject='Disconnected'}}"
                                    TextColor="{DynamicResource TextSecondary}"
                                    VerticalTextAlignment="Center" />
                                <Switch
                                    Grid.Column="1"
                                    IsToggled="{Binding IsConnected, Mode=OneWay}"
                                    OnColor="{DynamicResource RailwayAccent}"
                                    Scale="0.75"
                                    ThumbColor="White"
                                    Toggled="ConnectionSwitch_Toggled" />
                            </Grid>
                        </Border>

                        <!--  Track Power Toggle  -->
                        <Border
                            Grid.Column="1"
                            HorizontalOptions="Center"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <Grid ColumnDefinitions="Auto,Auto">
                                <Label
                                    Grid.Column="0"
                                    FontSize="11"
                                    Text="Track Power"
                                    TextColor="{DynamicResource TextSecondary}"
                                    VerticalTextAlignment="Center" />
                                <Switch
                                    Grid.Column="1"
                                    IsEnabled="{Binding IsConnected}"
                                    IsToggled="{Binding IsTrackPowerOn, Mode=OneWay}"
                                    OnColor="{DynamicResource RailwayWarning}"
                                    Scale="0.75"
                                    ThumbColor="White"
                                    Toggled="TrackPowerSwitch_Toggled" />
                            </Grid>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!--  System Stats Card (when connected)  -->
            <Border
                Padding="12,8"
                BackgroundColor="{DynamicResource SurfaceCard}"
                IsVisible="{Binding IsConnected}"
                StrokeShape="RoundRectangle 0"
                StrokeThickness="0">
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="4">
                    <!--  Temperature  -->
                    <HorizontalStackLayout
                        Grid.Column="0"
                        HorizontalOptions="Center"
                        Spacing="4"
                        VerticalOptions="Center">
                        <Label
                            FontSize="14"
                            Text="ðŸŒ¡ï¸"
                            VerticalOptions="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="{Binding Temperature, StringFormat='{0}Â°C'}"
                            TextColor="{DynamicResource TextPrimary}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <!--  Supply Voltage  -->
                    <HorizontalStackLayout
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        Spacing="4"
                        VerticalOptions="Center">
                        <Label
                            FontSize="14"
                            Text="ðŸ”Œ"
                            VerticalOptions="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="{Binding SupplyVoltage, StringFormat='{0}mV'}"
                            TextColor="{DynamicResource TextPrimary}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <!--  VCC  -->
                    <HorizontalStackLayout
                        Grid.Column="2"
                        HorizontalOptions="Center"
                        Spacing="4"
                        VerticalOptions="Center">
                        <Label
                            FontSize="14"
                            Text="âš¡"
                            VerticalOptions="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="{Binding VccVoltage, StringFormat='{0}mV'}"
                            TextColor="{DynamicResource TextPrimary}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!--  Counter Settings Card  -->
            <Border
                Padding="16,12"
                BackgroundColor="{DynamicResource SurfaceCard}"
                Stroke="Transparent"
                StrokeThickness="0">
                <VerticalStackLayout Spacing="6">
                    <!--  Section Header  -->
                    <Grid ColumnDefinitions="*,*">
                        <Label
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Feedback Points" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="14"
                            HorizontalTextAlignment="End"
                            Text="Lap Counter" />
                    </Grid>
                    <!--  Feedback Points & Target Laps  -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
                        <!--  Number of Feedback Points  -->
                        <Border
                            Grid.Column="0"
                            Padding="10,8"
                            BackgroundColor="{DynamicResource SurfaceHighlight}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                                <Button
                                    Padding="8,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    Command="{Binding DecrementFeedbackPointsCommand}"
                                    CornerRadius="4"
                                    FontSize="16"
                                    Text="âˆ’"
                                    TextColor="{DynamicResource TextPrimary}"
                                    WidthRequest="36" />
                                <Border
                                    Padding="10,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    StrokeShape="RoundRectangle 4"
                                    StrokeThickness="0"
                                    WidthRequest="44">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="15"
                                        HorizontalOptions="Center"
                                        Text="{Binding CountOfFeedbackPoints}"
                                        TextColor="{DynamicResource TextPrimary}"
                                        VerticalOptions="Center" />
                                </Border>
                                <Button
                                    Padding="8,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    Command="{Binding IncrementFeedbackPointsCommand}"
                                    CornerRadius="4"
                                    FontSize="16"
                                    Text="+"
                                    TextColor="{DynamicResource TextPrimary}"
                                    WidthRequest="36" />
                            </HorizontalStackLayout>
                        </Border>

                        <!--  Target Lap Count  -->
                        <Border
                            Grid.Column="1"
                            Padding="10,8"
                            BackgroundColor="{DynamicResource SurfaceHighlight}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                                <Button
                                    Padding="8,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    Command="{Binding DecrementTargetLapCountCommand}"
                                    CornerRadius="4"
                                    FontSize="16"
                                    Text="âˆ’"
                                    TextColor="{DynamicResource TextPrimary}"
                                    WidthRequest="36" />
                                <Border
                                    Padding="10,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    StrokeShape="RoundRectangle 4"
                                    StrokeThickness="0"
                                    WidthRequest="44">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="15"
                                        HorizontalOptions="Center"
                                        Text="{Binding GlobalTargetLapCount}"
                                        TextColor="{DynamicResource TextPrimary}"
                                        VerticalOptions="Center" />
                                </Border>
                                <Button
                                    Padding="8,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    Command="{Binding IncrementTargetLapCountCommand}"
                                    CornerRadius="4"
                                    FontSize="16"
                                    Text="+"
                                    TextColor="{DynamicResource TextPrimary}"
                                    WidthRequest="36" />
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>

                    <!--  Timer Filter  -->
                    <Border
                        Padding="10,8"
                        BackgroundColor="{DynamicResource SurfaceHighlight}"
                        StrokeShape="RoundRectangle 6"
                        StrokeThickness="0">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <HorizontalStackLayout Grid.Column="0" Spacing="6">
                                <CheckBox
                                    IsChecked="{Binding UseTimerFilter}"
                                    Scale="0.90"
                                    VerticalOptions="Center" />
                                <Label
                                    Margin="-8,0,0,0"
                                    FontSize="12"
                                    Text="Timer in s"
                                    TextColor="{DynamicResource TextSecondary}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="1" Spacing="6">
                                <Button
                                    Padding="8,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    Command="{Binding DecrementTimerIntervalCommand}"
                                    CornerRadius="4"
                                    FontSize="16"
                                    IsEnabled="{Binding UseTimerFilter}"
                                    Text="âˆ’"
                                    TextColor="{DynamicResource TextPrimary}"
                                    WidthRequest="36" />
                                <Border
                                    Padding="10,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    StrokeShape="RoundRectangle 4"
                                    StrokeThickness="0"
                                    WidthRequest="70">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="13"
                                        HorizontalOptions="Center"
                                        IsEnabled="{Binding UseTimerFilter}"
                                        Text="{Binding TimerIntervalSeconds, StringFormat='{0:F1}'}"
                                        TextColor="{DynamicResource TextPrimary}"
                                        VerticalOptions="Center" />
                                </Border>
                                <Button
                                    Padding="8,4"
                                    BackgroundColor="{DynamicResource SurfaceDark}"
                                    Command="{Binding IncrementTimerIntervalCommand}"
                                    CornerRadius="4"
                                    FontSize="16"
                                    IsEnabled="{Binding UseTimerFilter}"
                                    Text="+"
                                    TextColor="{DynamicResource TextPrimary}"
                                    WidthRequest="36" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!--  Lap Counters Card  -->
            <Border
                Padding="16,12"
                BackgroundColor="{DynamicResource SurfaceCard}"
                Stroke="Transparent"
                StrokeThickness="0">
                <VerticalStackLayout Spacing="6">
                    <!--  Section Header with Reset Button  -->
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Lap Counters"
                            VerticalOptions="Center" />
                        <Button
                            Grid.Column="2"
                            Padding="12,4"
                            BackgroundColor="{DynamicResource SurfaceHighlight}"
                            Command="{Binding ResetCountersCommand}"
                            CornerRadius="6"
                            FontSize="11"
                            HeightRequest="28"
                            Text="â†» Reset"
                            TextColor="{DynamicResource TextSecondary}"
                            VerticalOptions="Center" />
                    </Grid>

                    <!--  Counters List  -->
                    <CollectionView ItemsSource="{Binding Statistics}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="local:InPortStatistic">
                                <Border
                                    Margin="0,0,0,4"
                                    Padding="12,8"
                                    BackgroundColor="{DynamicResource SurfaceElevated}"
                                    StrokeShape="RoundRectangle 8"
                                    StrokeThickness="0">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <!--  Counter Badge  -->
                                        <Border
                                            Grid.Column="0"
                                            BackgroundColor="{Binding HasReceivedFirstLap, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayPrimary}}}"
                                            HeightRequest="32"
                                            StrokeShape="RoundRectangle 8"
                                            StrokeThickness="0"
                                            VerticalOptions="Center"
                                            WidthRequest="32">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                HorizontalOptions="Center"
                                                Text="{Binding Count}"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                        </Border>

                                        <!--  Content Grid  -->
                                        <Grid
                                            Grid.Column="1"
                                            RowDefinitions="Auto,Auto"
                                            RowSpacing="2">
                                            <!--  Track Name and Times  -->
                                            <Grid
                                                Grid.Row="0"
                                                ColumnDefinitions="Auto,*"
                                                ColumnSpacing="8">
                                                <!--  Track Name  -->
                                                <Label
                                                    Grid.Column="0"
                                                    FontAttributes="Bold"
                                                    FontSize="13"
                                                    Text="{Binding InPort, StringFormat='Track {0}'}"
                                                    VerticalOptions="Center" />
                                                <!--  Times on right  -->
                                                <HorizontalStackLayout
                                                    Grid.Column="1"
                                                    HorizontalOptions="End"
                                                    Spacing="6"
                                                    VerticalOptions="Center">
                                                    <Label
                                                        FontSize="10"
                                                        Text="Lap:"
                                                        TextColor="{DynamicResource TextDisabled}" />
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="10"
                                                        Text="{Binding LastLapTimeFormatted}"
                                                        TextColor="{DynamicResource RailwaySecondary}" />
                                                    <Label
                                                        FontSize="10"
                                                        Text="@"
                                                        TextColor="{DynamicResource TextDisabled}" />
                                                    <Label
                                                        FontSize="10"
                                                        Text="{Binding LastFeedbackTimeFormatted}"
                                                        TextColor="{DynamicResource TextDisabled}" />
                                                </HorizontalStackLayout>
                                            </Grid>

                                            <!--  Lap Count and Progress  -->
                                            <Grid
                                                Grid.Row="1"
                                                ColumnDefinitions="Auto,*,Auto,Auto"
                                                ColumnSpacing="6">
                                                <!--  Lap Count  -->
                                                <Label
                                                    Grid.Column="0"
                                                    FontSize="10"
                                                    Text="{Binding LapCountFormatted}"
                                                    TextColor="{DynamicResource TextSecondary}"
                                                    VerticalOptions="Center" />
                                                <!--  Spacer  -->
                                                <BoxView Grid.Column="1" Color="Transparent" />
                                                <!--  Progress Bar  -->
                                                <ProgressBar
                                                    Grid.Column="2"
                                                    HeightRequest="4"
                                                    Progress="{Binding Progress}"
                                                    ProgressColor="{DynamicResource RailwayAccent}"
                                                    VerticalOptions="Center"
                                                    WidthRequest="50" />
                                                <!--  Progress Percentage  -->
                                                <Label
                                                    Grid.Column="3"
                                                    FontSize="10"
                                                    HorizontalTextAlignment="End"
                                                    Text="{Binding Progress, StringFormat='{0:P0}'}"
                                                    TextColor="{DynamicResource TextSecondary}"
                                                    VerticalOptions="Center"
                                                    WidthRequest="35" />
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!--  Photo Capture & Upload Card  -->
            <Border
                Padding="16,12"
                BackgroundColor="{DynamicResource SurfaceCard}"
                Stroke="Transparent"
                StrokeThickness="0">
                <VerticalStackLayout Spacing="6">
                    <Grid
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="8"
                        VerticalOptions="Center">
                        <Label
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Capture &amp; Upload"
                            TextColor="{DynamicResource RailwayPrimary}" />
                    </Grid>

                    <Button
                        Command="{Binding CaptureAndUploadPhotoCommand}"
                        HeightRequest="44"
                        IsEnabled="{Binding IsPhotoUploading, Converter={toolkit:BoolToObjectConverter TrueObject=False, FalseObject=True}}"
                        Style="{DynamicResource AccentButtonStyle}"
                        Text="Take Photo &amp; Upload" />

                    <Grid
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="8"
                        VerticalOptions="Center">
                        <ActivityIndicator
                            Grid.Column="0"
                            IsRunning="{Binding IsPhotoUploading}"
                            IsVisible="{Binding IsPhotoUploading}" />
                        <Label
                            Grid.Column="1"
                            FontSize="12"
                            Text="{Binding PhotoUploadStatus}"
                            TextColor="{Binding PhotoUploadSuccess, Converter={toolkit:BoolToObjectConverter TrueObject={StaticResource RailwayAccent}, FalseObject={StaticResource RailwayDanger}}}"
                            TextType="Text"
                            VerticalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!--  Footer  -->
            <Label
                Padding="16,12,16,16"
                BackgroundColor="{DynamicResource SurfaceBackground}"
                FontSize="9"
                HorizontalOptions="Center"
                Text="Â© 2025 Andreas HÃ¼lsmann"
                TextColor="{DynamicResource TextDisabled}" />

