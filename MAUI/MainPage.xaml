<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moba.Smart.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MOBAsmart"
    BackgroundColor="{DynamicResource SurfaceBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!--  Header with App Title  -->
            <Border Margin="16,16,16,8" Style="{DynamicResource ElevatedCard}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Style="{DynamicResource HeadlineMedium}" Text="MOBAsmart" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!--  Connection Status Card  -->
            <Border Style="{DynamicResource ElevatedCard}">
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                    <!--  Status Icon  -->
                    <Border
                        Grid.Column="0"
                        BackgroundColor="{DynamicResource RailwayPrimary}"
                        HeightRequest="56"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="0"
                        VerticalOptions="Center"
                        WidthRequest="56">
                        <Label
                            FontSize="32"
                            HorizontalOptions="Center"
                            Text="ðŸ”Œ"
                            VerticalOptions="Center" />
                    </Border>

                    <!--  Content  -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        Spacing="6"
                        VerticalOptions="Center">
                        <Label Style="{DynamicResource TitleMedium}" Text="Connection Status" />
                        <Label Style="{DynamicResource BodyMedium}" Text="{Binding StatusText}" />
                        <Label Style="{DynamicResource LabelSmall}" Text="{Binding Z21IpAddress, StringFormat='IP: {0}'}" />
                    </VerticalStackLayout>

                    <!--  Status Indicator  -->
                    <BoxView
                        Grid.Column="2"
                        BackgroundColor="{DynamicResource RailwayAccent}"
                        CornerRadius="8"
                        HeightRequest="16"
                        IsVisible="{Binding IsConnected}"
                        VerticalOptions="Center"
                        WidthRequest="16" />
                </Grid>
            </Border>

            <!--  Connection Controls Card  -->
            <Border Style="{DynamicResource FilledCard}">
                <VerticalStackLayout Spacing="16">
                    <Label Style="{DynamicResource TitleSmall}" Text="Connection Controls" />

                    <!--  IP Address Picker  -->
                    <Border
                        Padding="12"
                        BackgroundColor="{DynamicResource SurfaceHighlight}"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="0">
                        <Picker
                            Title="Select Z21 IP Address"
                            ItemsSource="{Binding AvailableIpAddresses}"
                            SelectedItem="{Binding Z21IpAddress}"
                            TextColor="{DynamicResource TextPrimary}"
                            TitleColor="{DynamicResource TextSecondary}" />
                    </Border>

                    <!--  Connect/Disconnect Buttons  -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button
                            Grid.Column="0"
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding IsNotConnected}"
                            Style="{DynamicResource AccentButton}"
                            Text="Connect" />
                        <Button
                            Grid.Column="1"
                            Command="{Binding DisconnectCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Style="{DynamicResource DangerButton}"
                            Text="Disconnect" />
                    </Grid>

                    <!--  Track Power Control  -->
                    <Border
                        Padding="16"
                        BackgroundColor="{DynamicResource SurfaceDark}"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="0">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <Label
                                Grid.Column="0"
                                FontSize="24"
                                Text="âš¡"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Style="{DynamicResource BodyLarge}"
                                Text="Track Power"
                                VerticalOptions="Center" />
                            <Switch
                                x:Name="TrackPowerSwitch"
                                Grid.Column="2"
                                IsToggled="{Binding IsTrackPowerOn}"
                                OnColor="{DynamicResource RailwayAccent}"
                                ThumbColor="White"
                                Toggled="TrackPowerSwitch_Toggled"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!--  Lap Counters Card  -->
            <Border Style="{DynamicResource ElevatedCard}">
                <VerticalStackLayout Spacing="16">
                    <Label Style="{DynamicResource TitleMedium}" Text="Lap Counters" />

                    <!--  Counters List  -->
                    <CollectionView ItemsSource="{Binding Statistics}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,12"
                                    Padding="16"
                                    BackgroundColor="{DynamicResource SurfaceElevated}"
                                    StrokeShape="RoundRectangle 16"
                                    StrokeThickness="0">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                                        <!--  Counter Icon  -->
                                        <Border
                                            Grid.Column="0"
                                            BackgroundColor="{DynamicResource RailwayPrimary}"
                                            HeightRequest="48"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="0"
                                            WidthRequest="48">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="20"
                                                HorizontalOptions="Center"
                                                Text="{Binding Count}"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                        </Border>

                                        <!--  Content  -->
                                        <VerticalStackLayout
                                            Grid.Column="1"
                                            Spacing="4"
                                            VerticalOptions="Center">
                                            <Label Style="{DynamicResource TitleSmall}" Text="{Binding InPort, StringFormat='Track {0}'}" />
                                            <Label Style="{DynamicResource LabelSmall}" Text="{Binding LapCountFormatted}" />
                                            <Label
                                                Style="{DynamicResource LabelSmall}"
                                                Text="{Binding LastLapTimeFormatted, StringFormat='Last: {0}'}"
                                                TextColor="{DynamicResource RailwaySecondary}" />
                                        </VerticalStackLayout>

                                        <!--  Progress Indicator  -->
                                        <ProgressBar
                                            Grid.Column="2"
                                            Progress="{Binding Progress}"
                                            ProgressColor="{DynamicResource RailwayAccent}"
                                            Rotation="270"
                                            VerticalOptions="Center"
                                            WidthRequest="60" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!--  Reset Button  -->
                    <Button
                        Command="{Binding ResetCountersCommand}"
                        Style="{DynamicResource OutlinedButton}"
                        Text="Reset All Counters" />
                </VerticalStackLayout>
            </Border>

            <!--  System Information Expander  -->
            <Border Style="{DynamicResource FilledCard}">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid Padding="0" ColumnDefinitions="Auto,*,Auto">
                            <Label
                                Grid.Column="0"
                                FontSize="24"
                                Text="â„¹ï¸"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                Style="{DynamicResource TitleMedium}"
                                Text="System Information"
                                VerticalOptions="Center" />
                        </Grid>
                    </toolkit:Expander.Header>

                    <toolkit:Expander.Content>
                        <VerticalStackLayout Padding="0,16,0,0" Spacing="16">
                            <!--  Status Info  -->
                            <VerticalStackLayout Spacing="8">
                                <Label
                                    Style="{DynamicResource LabelLarge}"
                                    Text="Status"
                                    TextColor="{DynamicResource RailwaySecondary}" />
                                <Grid
                                    ColumnDefinitions="140,*"
                                    RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                    RowSpacing="8">
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{DynamicResource BodyMedium}"
                                        Text="Temperature:" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{DynamicResource BodyMedium}"
                                        Text="{Binding Temperature, StringFormat='{0} Â°C'}"
                                        TextColor="{DynamicResource RailwaySecondary}" />

                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Style="{DynamicResource BodyMedium}"
                                        Text="Supply Voltage:" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Style="{DynamicResource BodyMedium}"
                                        Text="{Binding SupplyVoltage, StringFormat='{0} mV'}"
                                        TextColor="{DynamicResource RailwaySecondary}" />

                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Style="{DynamicResource BodyMedium}"
                                        Text="VCC Voltage:" />
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Style="{DynamicResource BodyMedium}"
                                        Text="{Binding VccVoltage, StringFormat='{0} mV'}"
                                        TextColor="{DynamicResource RailwaySecondary}" />
                                </Grid>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Border>

            <!--  Footer Spacer  -->
            <BoxView HeightRequest="16" Color="Transparent" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
