<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moba.Smart.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MOBAsmart"
    BackgroundColor="{DynamicResource SurfaceBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!--  Header with App Title  -->
            <Frame Style="{DynamicResource ElevatedCard}" Margin="16,16,16,8">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Text="MOBAsmart" Style="{DynamicResource HeadlineMedium}" />
                        <Label Text="Railway Control Dashboard" Style="{DynamicResource BodySmall}" TextColor="{DynamicResource TextDisabled}" />
                    </VerticalStackLayout>
                    <Label Grid.Column="1" 
                           Text="ðŸš‚" 
                           FontSize="48"
                           VerticalOptions="Center" />
                </Grid>
            </Frame>

            <!--  Connection Status Card  -->
            <Frame Style="{DynamicResource ElevatedCard}">
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                    <!--  Status Icon  -->
                    <Border Grid.Column="0"
                            WidthRequest="56"
                            HeightRequest="56"
                            StrokeThickness="0"
                            BackgroundColor="{DynamicResource RailwayPrimary}"
                            StrokeShape="RoundRectangle 12"
                            VerticalOptions="Center">
                        <Label Text="ðŸ“¡" 
                               FontSize="32"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>

                    <!--  Content  -->
                    <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                        <Label Text="Connection Status" Style="{DynamicResource TitleMedium}" />
                        <Label Text="{Binding StatusText}" 
                               Style="{DynamicResource BodyMedium}" />
                        <Label Text="{Binding Z21IpAddress, StringFormat='IP: {0}'}" 
                               Style="{DynamicResource LabelSmall}" />
                    </VerticalStackLayout>

                    <!--  Status Indicator  -->
                    <BoxView Grid.Column="2"
                             WidthRequest="16"
                             HeightRequest="16"
                             CornerRadius="8"
                             BackgroundColor="{DynamicResource RailwayAccent}"
                             IsVisible="{Binding IsConnected}"
                             VerticalOptions="Center" />
                </Grid>
            </Frame>

            <!--  Connection Controls Card  -->
            <Frame Style="{DynamicResource FilledCard}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Connection Controls" Style="{DynamicResource TitleSmall}" />

                    <!--  IP Address Picker  -->
                    <Border BackgroundColor="{DynamicResource SurfaceHighlight}"
                            StrokeThickness="0"
                            Padding="12"
                            StrokeShape="RoundRectangle 12">
                        <Picker Title="Select Z21 IP Address"
                                ItemsSource="{Binding AvailableIpAddresses}"
                                SelectedItem="{Binding Z21IpAddress}"
                                TextColor="{DynamicResource TextPrimary}"
                                TitleColor="{DynamicResource TextSecondary}" />
                    </Border>

                    <!--  Connect/Disconnect Buttons  -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                Text="Connect"
                                Style="{DynamicResource AccentButton}"
                                Command="{Binding ConnectCommand}"
                                IsEnabled="{Binding IsNotConnected}" />
                        <Button Grid.Column="1"
                                Text="Disconnect"
                                Style="{DynamicResource DangerButton}"
                                Command="{Binding DisconnectCommand}"
                                IsEnabled="{Binding IsConnected}" />
                    </Grid>

                    <!--  Track Power Control  -->
                    <Border BackgroundColor="{DynamicResource SurfaceDark}"
                            StrokeThickness="0"
                            Padding="16"
                            StrokeShape="RoundRectangle 12">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <Label Grid.Column="0" 
                                   Text="âš¡" 
                                   FontSize="24"
                                   VerticalOptions="Center" />
                            <Label Grid.Column="1" 
                                   Text="Track Power" 
                                   Style="{DynamicResource BodyLarge}"
                                   VerticalOptions="Center" />
                            <Switch Grid.Column="2" 
                                    x:Name="TrackPowerSwitch"
                                    IsToggled="{Binding IsTrackPowerOn}"
                                    Toggled="TrackPowerSwitch_Toggled"
                                    OnColor="{DynamicResource RailwayAccent}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Frame>

            <!--  Lap Counters Card  -->
            <Frame Style="{DynamicResource ElevatedCard}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Lap Counters" Style="{DynamicResource TitleMedium}" />

                    <!--  Counters List  -->
                    <CollectionView ItemsSource="{Binding Statistics}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="{DynamicResource SurfaceElevated}"
                                        StrokeThickness="0"
                                        Padding="16"
                                        Margin="0,0,0,12"
                                        StrokeShape="RoundRectangle 16">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                                        <!--  Counter Icon  -->
                                        <Border Grid.Column="0"
                                                WidthRequest="48"
                                                HeightRequest="48"
                                                StrokeThickness="0"
                                                BackgroundColor="{DynamicResource RailwayPrimary}"
                                                StrokeShape="RoundRectangle 12">
                                            <Label Text="{Binding Count}" 
                                                   FontSize="20"
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>

                                        <!--  Content  -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                            <Label Text="{Binding InPort, StringFormat='Track {0}'}" 
                                                   Style="{DynamicResource TitleSmall}" />
                                            <Label Text="{Binding LapCountFormatted}" 
                                                   Style="{DynamicResource LabelSmall}" />
                                            <Label Text="{Binding LastLapTimeFormatted, StringFormat='Last: {0}'}" 
                                                   Style="{DynamicResource LabelSmall}"
                                                   TextColor="{DynamicResource RailwaySecondary}" />
                                        </VerticalStackLayout>

                                        <!--  Progress Indicator  -->
                                        <ProgressBar Grid.Column="2"
                                                     Progress="{Binding Progress}"
                                                     ProgressColor="{DynamicResource RailwayAccent}"
                                                     WidthRequest="60"
                                                     VerticalOptions="Center"
                                                     Rotation="270" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!--  Reset Button  -->
                    <Button Text="Reset All Counters" 
                            Style="{DynamicResource OutlinedButton}"
                            Command="{Binding ResetCountersCommand}" />
                </VerticalStackLayout>
            </Frame>

            <!--  System Information Expander  -->
            <Frame Style="{DynamicResource FilledCard}">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid ColumnDefinitions="Auto,*,Auto" Padding="0">
                            <Label Grid.Column="0" 
                                   Text="â„¹ï¸" 
                                   FontSize="24"
                                   VerticalOptions="Center" />
                            <Label Grid.Column="1" 
                                   Text="System Information" 
                                   Style="{DynamicResource TitleMedium}"
                                   VerticalOptions="Center"
                                   Margin="12,0,0,0" />
                        </Grid>
                    </toolkit:Expander.Header>

                    <toolkit:Expander.Content>
                        <VerticalStackLayout Spacing="16" Padding="0,16,0,0">
                            <!--  Status Info  -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Status" Style="{DynamicResource LabelLarge}" TextColor="{DynamicResource RailwaySecondary}" />
                                <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                                    <Label Grid.Row="0" Grid.Column="0" Text="Temperature:" Style="{DynamicResource BodyMedium}" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Temperature, StringFormat='{0} Â°C'}" Style="{DynamicResource BodyMedium}" TextColor="{DynamicResource RailwaySecondary}" />

                                    <Label Grid.Row="1" Grid.Column="0" Text="Supply Voltage:" Style="{DynamicResource BodyMedium}" />
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding SupplyVoltage, StringFormat='{0} mV'}" Style="{DynamicResource BodyMedium}" TextColor="{DynamicResource RailwaySecondary}" />

                                    <Label Grid.Row="2" Grid.Column="0" Text="VCC Voltage:" Style="{DynamicResource BodyMedium}" />
                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding VccVoltage, StringFormat='{0} mV'}" Style="{DynamicResource BodyMedium}" TextColor="{DynamicResource RailwaySecondary}" />

                                    <Label Grid.Row="3" Grid.Column="0" Text="State:" Style="{DynamicResource BodyMedium}" />
                                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding CentralState}" Style="{DynamicResource BodyMedium}" TextColor="{DynamicResource RailwaySecondary}" />

                                    <Label Grid.Row="4" Grid.Column="0" Text="StateEx:" Style="{DynamicResource BodyMedium}" />
                                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding CentralStateEx}" Style="{DynamicResource BodyMedium}" TextColor="{DynamicResource RailwaySecondary}" />
                                </Grid>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>

            <!--  Footer Spacer  -->
            <BoxView HeightRequest="16" Color="Transparent" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>