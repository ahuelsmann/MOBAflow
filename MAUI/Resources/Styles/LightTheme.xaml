<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--
        ☀️ MOBAsmart Light Theme
        Material Design inspired light color scheme for Z21 control app
    -->

    <!--  Primary Colors (Railway Blue)  -->
    <Color x:Key="Primary">#1976D2</Color>
    <Color x:Key="PrimaryDark">#0D47A1</Color>
    <Color x:Key="PrimaryLight">#42A5F5</Color>
    <Color x:Key="RailwayPrimary">#1976D2</Color>

    <!--  Accent Colors (Signal Green)  -->
    <Color x:Key="Accent">#4CAF50</Color>
    <Color x:Key="AccentDark">#388E3C</Color>
    <Color x:Key="AccentLight">#81C784</Color>
    <Color x:Key="RailwayAccent">#4CAF50</Color>
    <Color x:Key="RailwayDanger">#D32F2F</Color>
    <Color x:Key="RailwaySecondary">#FF6F00</Color>
    <Color x:Key="RailwayWarning">#FFA000</Color>

    <!--  Error/Warning Colors  -->
    <Color x:Key="Error">#D32F2F</Color>
    <Color x:Key="Warning">#FFA000</Color>
    <Color x:Key="Success">#4CAF50</Color>

    <!--  Background Colors (Light Material)  -->
    <Color x:Key="Background">#FAFAFA</Color>
    <Color x:Key="SurfaceBackground">#FAFAFA</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#F5F5F5</Color>
    <Color x:Key="SurfaceVariant">#EEEEEE</Color>
    <Color x:Key="SurfaceHighlight">#E0E0E0</Color>

    <!--  Text Colors (Light Theme)  -->
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextDisabled">#BDBDBD</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>

    <!--  Border Colors  -->
    <Color x:Key="Border">#E0E0E0</Color>
    <Color x:Key="Divider">#EEEEEE</Color>

    <!--  Legacy compatibility  -->
    <Color x:Key="PageBackgroundColor">#FAFAFA</Color>
    <Color x:Key="FrameBackgroundColor">#FFFFFF</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray600">#F5F5F5</Color>

    <!--  📏 Spacing (Material Design 8dp grid)  -->
    <x:Double x:Key="SpacingXs">4</x:Double>
    <x:Double x:Key="SpacingS">8</x:Double>
    <x:Double x:Key="SpacingM">16</x:Double>
    <x:Double x:Key="SpacingL">24</x:Double>
    <x:Double x:Key="SpacingXl">32</x:Double>

    <!--  🔤 Typography  -->
    <x:Double x:Key="FontSizeCaption">12</x:Double>
    <x:Double x:Key="FontSizeBody">14</x:Double>
    <x:Double x:Key="FontSizeSubtitle">16</x:Double>
    <x:Double x:Key="FontSizeTitle">20</x:Double>
    <x:Double x:Key="FontSizeHeadline">24</x:Double>

    <!--  🔘 Button Styles  -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SurfaceVariant}" />
                            <Setter Property="TextColor" Value="{StaticResource TextDisabled}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style
        x:Key="SecondaryButtonStyle"
        BasedOn="{StaticResource PrimaryButtonStyle}"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
    </Style>

    <Style x:Key="AccentButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource RailwayAccent}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HeightRequest" Value="48" />
    </Style>

</ResourceDictionary>
