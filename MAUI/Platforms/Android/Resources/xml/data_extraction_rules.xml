<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app data directory (where appsettings.json is stored) -->
        <include domain="file" path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Include app data directory for device-to-device transfer -->
        <include domain="file" path="." />
    </device-transfer>
</data-extraction-rules>
