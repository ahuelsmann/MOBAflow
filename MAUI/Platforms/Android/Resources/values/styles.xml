<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base MAUI theme using Material3 -->
    <style name="MainTheme" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        
        <!-- Customize your theme here -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/maui_background_color</item>
    </style>

    <!-- MAUI Splash Theme (used on startup) -->
    <style name="Maui.SplashTheme" parent="MainTheme">
        <item name="android:windowBackground">@drawable/maui_splash_image</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">true</item>
    </style>
</resources>
